@namespace BlazyUI
@implements IDisposable

@foreach (var modal in _modals)
{
    <dialog class="modal @(modal.IsClosing ? "" : "modal-open")">
        <div class="modal-box @modal.CssClass">
            @if (modal.Type == BlazyModalType.Custom)
            {
                <CascadingValue Value="modal.Instance">
                    <DynamicComponent Type="@modal.ComponentType" Parameters="@modal.Parameters" />
                </CascadingValue>
            }
            else
            {
                <div class="flex gap-4">
                    <div class="@GetIconColorClass(modal.Type)">
                        @switch (modal.Type)
                        {
                            case BlazyModalType.Info:
                                <InfoIcon Class="w-6 h-6" />
                                break;
                            case BlazyModalType.Warning:
                                <WarningIcon Class="w-6 h-6" />
                                break;
                            case BlazyModalType.Error:
                                <ErrorIcon Class="w-6 h-6" />
                                break;
                            case BlazyModalType.Confirm:
                                <QuestionIcon Class="w-6 h-6" />
                                break;
                        }
                    </div>
                    <div class="flex-1">
                        <h3 class="font-bold text-lg">@modal.Title</h3>
                        <p class="py-4">@modal.Message</p>
                    </div>
                </div>

                <div class="modal-action">
                    @if (modal.Type == BlazyModalType.Confirm)
                    {
                        <button class="btn" @onclick="() => Close(modal, false)">
                            @modal.CancelText
                        </button>
                    }
                    <button class="btn btn-primary" @onclick="() => Close(modal, true)">
                        @modal.OkText
                    </button>
                </div>
            }
        </div>

        @if (modal.CloseOnBackdropClick)
        {
            <div class="modal-backdrop" @onclick="() => Close(modal, false)"></div>
        }
        else
        {
            <div class="modal-backdrop"></div>
        }
    </dialog>
}

@code {
    [Inject] private IBlazyModalService ModalService { get; set; } = default!;

    private BlazyModalService? _service;
    private IReadOnlyList<BlazyModalReference> _modals = Array.Empty<BlazyModalReference>();

    protected override void OnInitialized()
    {
        _service = ModalService as BlazyModalService;
        if (_service != null)
        {
            _modals = _service.Modals;
            _service.OnChange += HandleChange;
        }
    }

    private void HandleChange()
    {
        if (_service != null)
        {
            _modals = _service.Modals;
        }
        InvokeAsync(StateHasChanged);
    }

    private async Task Close(BlazyModalReference modal, bool confirmed)
    {
        modal.IsClosing = true;
        StateHasChanged();
        await Task.Delay(300); // Wait for CSS closing animation
        _service?.CloseModalById(modal.Id, confirmed);
    }

    private static string GetIconColorClass(BlazyModalType type) => type switch
    {
        BlazyModalType.Info => "text-info",
        BlazyModalType.Warning => "text-warning",
        BlazyModalType.Error => "text-error",
        BlazyModalType.Confirm => "text-base-content",
        _ => ""
    };

    public void Dispose()
    {
        if (_service != null)
        {
            _service.OnChange -= HandleChange;
        }
    }
}
