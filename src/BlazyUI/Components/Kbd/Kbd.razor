@namespace BlazyUI
@inherits BlazyComponentBase

<kbd class="@CssClass" @attributes="AdditionalAttributes">
    @ChildContent
</kbd>

@code {
    /// <summary>
    /// The size of the keyboard shortcut display.
    /// </summary>
    [Parameter]
    public KbdSize Size { get; set; } = KbdSize.Medium;

    /// <summary>
    /// The content to display inside the kbd element.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private string CssClass => MergeClasses(
        "kbd",
        SizeClass
    );

    private string SizeClass => Size switch
    {
        KbdSize.ExtraSmall => "kbd-xs",
        KbdSize.Small => "kbd-sm",
        KbdSize.Medium => "kbd-md",
        KbdSize.Large => "kbd-lg",
        KbdSize.ExtraLarge => "kbd-xl",
        _ => throw new ArgumentOutOfRangeException(nameof(Size), Size, null)
    };
}
