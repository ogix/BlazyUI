@namespace BlazyUI
@using System.Diagnostics.CodeAnalysis
@using System.Globalization
@typeparam T
@inherits BlazyInputBase<T>

<input type="number"
       id="@GetFieldId()"
       name="@GetFieldName()"
       class="@ComputedCssClass"
       value="@CurrentValueAsString"
       min="@(IsDefaultMin ? null : FormatNumber(Min))"
       max="@(IsDefaultMax ? null : FormatNumber(Max))"
       step="@FormatNumber(Step)"
       placeholder="@Placeholder"
       disabled="@Disabled"
       @onchange="OnChange"
       @attributes="AdditionalAttributes" />

@code {
    private static readonly T _defaultMin = GetTypeMinValue();
    private static readonly T _defaultMax = GetTypeMaxValue();

    private static T GetTypeMinValue()
    {
        var targetType = Nullable.GetUnderlyingType(typeof(T)) ?? typeof(T);
        object value = targetType switch
        {
            Type t when t == typeof(int) => int.MinValue,
            Type t when t == typeof(long) => long.MinValue,
            Type t when t == typeof(short) => short.MinValue,
            Type t when t == typeof(float) => float.MinValue,
            Type t when t == typeof(double) => double.MinValue,
            Type t when t == typeof(decimal) => decimal.MinValue,
            Type t when t == typeof(byte) => byte.MinValue,
            _ => throw new InvalidOperationException($"The type '{targetType}' is not a supported numeric type.")
        };
        return (T)value;
    }

    private static T GetTypeMaxValue()
    {
        var targetType = Nullable.GetUnderlyingType(typeof(T)) ?? typeof(T);
        object value = targetType switch
        {
            Type t when t == typeof(int) => int.MaxValue,
            Type t when t == typeof(long) => long.MaxValue,
            Type t when t == typeof(short) => short.MaxValue,
            Type t when t == typeof(float) => float.MaxValue,
            Type t when t == typeof(double) => double.MaxValue,
            Type t when t == typeof(decimal) => decimal.MaxValue,
            Type t when t == typeof(byte) => byte.MaxValue,
            _ => throw new InvalidOperationException($"The type '{targetType}' is not a supported numeric type.")
        };
        return (T)value;
    }

    /// <summary>
    /// The minimum allowed value. Defaults to the minimum value of the numeric type (e.g., int.MinValue).
    /// </summary>
    [Parameter]
    public T Min { get; set; } = _defaultMin;

    /// <summary>
    /// The maximum allowed value. Defaults to the maximum value of the numeric type (e.g., int.MaxValue).
    /// </summary>
    [Parameter]
    public T Max { get; set; } = _defaultMax;

    /// <summary>
    /// The step increment for the input. Defaults to 1.
    /// </summary>
    [Parameter]
    public T Step { get; set; } = _defaultStep;

    private static readonly T _defaultStep = GetDefaultStep();

    private static T GetDefaultStep()
    {
        var targetType = Nullable.GetUnderlyingType(typeof(T)) ?? typeof(T);
        object value = targetType switch
        {
            Type t when t == typeof(int) => 1,
            Type t when t == typeof(long) => 1L,
            Type t when t == typeof(short) => (short)1,
            Type t when t == typeof(float) => 1f,
            Type t when t == typeof(double) => 1d,
            Type t when t == typeof(decimal) => 1m,
            Type t when t == typeof(byte) => (byte)1,
            _ => throw new InvalidOperationException($"The type '{targetType}' is not a supported numeric type.")
        };
        return (T)value;
    }

    private bool IsDefaultMin => EqualityComparer<T>.Default.Equals(Min, _defaultMin);
    private bool IsDefaultMax => EqualityComparer<T>.Default.Equals(Max, _defaultMax);

    /// <summary>
    /// Placeholder text displayed when the input is empty.
    /// </summary>
    [Parameter]
    public string? Placeholder { get; set; }

    /// <summary>
    /// The size of the input.
    /// </summary>
    [Parameter]
    public BlazyNumberInputSize Size { get; set; } = BlazyNumberInputSize.Medium;

    /// <summary>
    /// The color of the input.
    /// </summary>
    [Parameter]
    public BlazyNumberInputColor Color { get; set; } = BlazyNumberInputColor.Default;

    /// <summary>
    /// Applies ghost styling (no background).
    /// </summary>
    [Parameter]
    public bool Ghost { get; set; }

    /// <summary>
    /// Gets or sets the error message used when displaying a parsing error.
    /// </summary>
    [Parameter]
    public string ParsingErrorMessage { get; set; } = "The {0} field must be a number.";

    /// <inheritdoc />
    protected override string GetErrorColorClass() => "input-error";

    /// <inheritdoc />
    protected override bool TryParseValueFromString(
        string? value,
        [MaybeNullWhen(false)] out T result,
        [NotNullWhen(false)] out string? validationErrorMessage)
    {
        if (BindConverter.TryConvertTo<T>(value, CultureInfo.InvariantCulture, out result))
        {
            validationErrorMessage = null;
            return true;
        }
        else
        {
            validationErrorMessage = string.Format(CultureInfo.InvariantCulture, ParsingErrorMessage, FieldIdentifier.FieldName);
            return false;
        }
    }

    /// <summary>
    /// Formats the value as a string. Derived classes can override this to determine the formatting used for <c>CurrentValueAsString</c>.
    /// </summary>
    /// <param name="value">The value to format.</param>
    /// <returns>A string representation of the value.</returns>
    protected override string? FormatValueAsString(T? value)
    {
        // Avoiding a cast to IFormattable to avoid boxing.
        return value switch
        {
            null => null,
            int @int => BindConverter.FormatValue(@int, CultureInfo.InvariantCulture),
            long @long => BindConverter.FormatValue(@long, CultureInfo.InvariantCulture),
            short @short => BindConverter.FormatValue(@short, CultureInfo.InvariantCulture),
            float @float => BindConverter.FormatValue(@float, CultureInfo.InvariantCulture),
            double @double => BindConverter.FormatValue(@double, CultureInfo.InvariantCulture),
            decimal @decimal => BindConverter.FormatValue(@decimal, CultureInfo.InvariantCulture),
            byte @byte => @byte.ToString(CultureInfo.InvariantCulture),
            _ => throw new InvalidOperationException($"Unsupported type {value.GetType()}")
        };
    }

    private string ComputedCssClass => MergeClasses(
        "input",
        SizeClass,
        ColorClass,
        Ghost ? "input-ghost" : null
    );

    private void OnChange(ChangeEventArgs e)
    {
        CurrentValueAsString = e.Value?.ToString();
    }

    private string? FormatNumber(T value)
    {
        // Use the same formatting logic as FormatValueAsString for consistency
        return value switch
        {
            null => null,
            int @int => BindConverter.FormatValue(@int, CultureInfo.InvariantCulture),
            long @long => BindConverter.FormatValue(@long, CultureInfo.InvariantCulture),
            short @short => BindConverter.FormatValue(@short, CultureInfo.InvariantCulture),
            float @float => BindConverter.FormatValue(@float, CultureInfo.InvariantCulture),
            double @double => BindConverter.FormatValue(@double, CultureInfo.InvariantCulture),
            decimal @decimal => BindConverter.FormatValue(@decimal, CultureInfo.InvariantCulture),
            byte @byte => @byte.ToString(CultureInfo.InvariantCulture),
            _ => throw new InvalidOperationException($"Unsupported type {typeof(T)}")
        };
    }

    private string SizeClass => Size switch
    {
        BlazyNumberInputSize.ExtraSmall => "input-xs",
        BlazyNumberInputSize.Small => "input-sm",
        BlazyNumberInputSize.Medium => "input-md",
        BlazyNumberInputSize.Large => "input-lg",
        BlazyNumberInputSize.ExtraLarge => "input-xl",
        _ => throw new ArgumentOutOfRangeException(nameof(Size), Size, null)
    };

    private string? ColorClass => Color switch
    {
        BlazyNumberInputColor.Default => null,
        BlazyNumberInputColor.Neutral => "input-neutral",
        BlazyNumberInputColor.Primary => "input-primary",
        BlazyNumberInputColor.Secondary => "input-secondary",
        BlazyNumberInputColor.Accent => "input-accent",
        BlazyNumberInputColor.Info => "input-info",
        BlazyNumberInputColor.Success => "input-success",
        BlazyNumberInputColor.Warning => "input-warning",
        BlazyNumberInputColor.Error => "input-error",
        _ => throw new ArgumentOutOfRangeException(nameof(Color), Color, null)
    };
}
