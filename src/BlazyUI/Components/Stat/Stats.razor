@namespace BlazyUI
@inherits BlazyComponentBase

<div class="@CssClass" @attributes="AdditionalAttributes">
    @ChildContent
</div>

@code {
    /// <summary>
    /// The direction/layout of the stats.
    /// </summary>
    [Parameter]
    public StatsDirection Direction { get; set; } = StatsDirection.Default;

    /// <summary>
    /// Adds a shadow to the stats container.
    /// </summary>
    [Parameter]
    public bool Shadow { get; set; }

    /// <summary>
    /// The content of the stats container (typically Stat components).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private string CssClass => MergeClasses(
        "stats",
        DirectionClass,
        Shadow ? "shadow" : null
    );

    private string? DirectionClass => Direction switch
    {
        StatsDirection.Default => null,
        StatsDirection.Horizontal => "stats-horizontal",
        StatsDirection.Vertical => "stats-vertical",
        _ => throw new ArgumentOutOfRangeException(nameof(Direction), Direction, null)
    };
}
