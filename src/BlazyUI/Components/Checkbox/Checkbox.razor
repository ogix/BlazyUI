@namespace BlazyUI
@inherits BlazyInputBase<bool>

<input type="checkbox"
       id="@IdAttributeValue"
       name="@NameAttributeValue"
       class="@ComputedCssClass"
       checked="@CurrentValue"
       @onchange="OnChange"
       @attributes="AdditionalAttributes" />

@code {
    /// <summary>
    /// The size of the checkbox.
    /// </summary>
    [Parameter]
    public CheckboxSize Size { get; set; } = CheckboxSize.Medium;

    /// <summary>
    /// The color of the checkbox.
    /// </summary>
    [Parameter]
    public CheckboxColor Color { get; set; } = CheckboxColor.Default;

    /// <inheritdoc />
    protected override string GetErrorColorClass() => "checkbox-error";

    /// <inheritdoc />
    protected override bool TryParseValueFromString(
        string? value,
        [System.Diagnostics.CodeAnalysis.NotNullWhen(true)] out bool result,
        [System.Diagnostics.CodeAnalysis.NotNullWhen(false)] out string? validationErrorMessage)
    {
        if (bool.TryParse(value, out result))
        {
            validationErrorMessage = null;
            return true;
        }

        result = false;
        validationErrorMessage = $"The value '{value}' is not a valid boolean.";
        return false;
    }

    private string ComputedCssClass => MergeClasses(
        "checkbox",
        SizeClass,
        ColorClass
    );

    private void OnChange(ChangeEventArgs e)
        => CurrentValue = (bool)(e.Value ?? false);

    private string SizeClass => Size switch
    {
        CheckboxSize.ExtraSmall => "checkbox-xs",
        CheckboxSize.Small => "checkbox-sm",
        CheckboxSize.Medium => "checkbox-md",
        CheckboxSize.Large => "checkbox-lg",
        CheckboxSize.ExtraLarge => "checkbox-xl",
        _ => throw new ArgumentOutOfRangeException(nameof(Size), Size, null)
    };

    private string? ColorClass => Color switch
    {
        CheckboxColor.Default => null,
        CheckboxColor.Neutral => "checkbox-neutral",
        CheckboxColor.Primary => "checkbox-primary",
        CheckboxColor.Secondary => "checkbox-secondary",
        CheckboxColor.Accent => "checkbox-accent",
        CheckboxColor.Info => "checkbox-info",
        CheckboxColor.Success => "checkbox-success",
        CheckboxColor.Warning => "checkbox-warning",
        CheckboxColor.Error => "checkbox-error",
        _ => throw new ArgumentOutOfRangeException(nameof(Color), Color, null)
    };
}
