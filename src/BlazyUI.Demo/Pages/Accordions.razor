@page "/accordions"

<PageTitle>Accordions</PageTitle>

<h1 class="text-3xl font-bold mb-6">Accordion Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic (Using Checkbox)</h2>
    <CodeExample Code="@basicCode">
        <div class="space-y-2">
            <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Arrow" Class="bg-base-200">
                <BlazyAccordionTitle Class="font-medium">
                    Click to open this one and close others
                </BlazyAccordionTitle>
                <BlazyAccordionContent>
                    <p>Hello! This is the content of the accordion panel. You can put anything here.</p>
                </BlazyAccordionContent>
            </BlazyAccordionItem>
            <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Arrow" Class="bg-base-200">
                <BlazyAccordionTitle Class="font-medium">
                    Click to open this one and close others
                </BlazyAccordionTitle>
                <BlazyAccordionContent>
                    <p>Different content for the second panel.</p>
                </BlazyAccordionContent>
            </BlazyAccordionItem>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Radio Group (Only One Open)</h2>
    <CodeExample Code="@radioGroupCode">
        <BlazyAccordion GroupName="my-accordion-1">
            <div class="space-y-2">
                <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Arrow" Class="bg-base-200">
                    <BlazyAccordionTitle Class="font-medium">
                        First item
                    </BlazyAccordionTitle>
                    <BlazyAccordionContent>
                        <p>Content for the first item. Opening this will close others.</p>
                    </BlazyAccordionContent>
                </BlazyAccordionItem>
                <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Arrow" Class="bg-base-200">
                    <BlazyAccordionTitle Class="font-medium">
                        Second item
                    </BlazyAccordionTitle>
                    <BlazyAccordionContent>
                        <p>Content for the second item. Opening this will close others.</p>
                    </BlazyAccordionContent>
                </BlazyAccordionItem>
                <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Arrow" Class="bg-base-200">
                    <BlazyAccordionTitle Class="font-medium">
                        Third item
                    </BlazyAccordionTitle>
                    <BlazyAccordionContent>
                        <p>Content for the third item. Opening this will close others.</p>
                    </BlazyAccordionContent>
                </BlazyAccordionItem>
            </div>
        </BlazyAccordion>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Plus/Minus Indicator</h2>
    <CodeExample Code="@plusIndicatorCode">
        <div class="space-y-2">
            <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Plus" Class="bg-base-200">
                <BlazyAccordionTitle Class="font-medium">
                    Click to expand
                </BlazyAccordionTitle>
                <BlazyAccordionContent>
                    <p>This accordion uses a plus/minus indicator.</p>
                </BlazyAccordionContent>
            </BlazyAccordionItem>
            <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Plus" Class="bg-base-200">
                <BlazyAccordionTitle Class="font-medium">
                    Another section
                </BlazyAccordionTitle>
                <BlazyAccordionContent>
                    <p>More content here.</p>
                </BlazyAccordionContent>
            </BlazyAccordionItem>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Force Open/Closed</h2>
    <CodeExample Code="@forceOpenCode">
        <div class="space-y-2">
            <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Arrow" Open Class="bg-base-200">
                <BlazyAccordionTitle Class="font-medium">
                    This is always open
                </BlazyAccordionTitle>
                <BlazyAccordionContent>
                    <p>This accordion item is forced to stay open.</p>
                </BlazyAccordionContent>
            </BlazyAccordionItem>
            <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Arrow" Closed Class="bg-base-200">
                <BlazyAccordionTitle Class="font-medium">
                    This is always closed
                </BlazyAccordionTitle>
                <BlazyAccordionContent>
                    <p>This content won't be visible because the accordion is forced closed.</p>
                </BlazyAccordionContent>
            </BlazyAccordionItem>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Styled Accordions</h2>
    <CodeExample Code="@styledCode">
        <div class="space-y-2">
            <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Arrow" Class="border border-base-300 bg-base-100 rounded-box">
                <BlazyAccordionTitle Class="font-medium">
                    Bordered Accordion
                </BlazyAccordionTitle>
                <BlazyAccordionContent>
                    <p>This accordion has a border and rounded corners.</p>
                </BlazyAccordionContent>
            </BlazyAccordionItem>
            <BlazyAccordionItem Indicator="BlazyAccordionIndicator.Plus" Class="bg-primary text-primary-content rounded-box">
                <BlazyAccordionTitle Class="font-medium">
                    Primary Colored
                </BlazyAccordionTitle>
                <BlazyAccordionContent>
                    <p>This accordion uses the primary color.</p>
                </BlazyAccordionContent>
            </BlazyAccordionItem>
        </div>
    </CodeExample>
</section>

