@page "/badges"

<PageTitle>Badges</PageTitle>

<h1 class="text-3xl font-bold mb-6">Badge Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <div class="flex flex-wrap gap-4">
            <BlazyBadge>Badge</BlazyBadge>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <CodeExample Code="@colorsCode">
        <div class="flex flex-wrap gap-4">
            <BlazyBadge>Default</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Neutral">Neutral</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Primary">Primary</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Secondary">Secondary</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Accent">Accent</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Info">Info</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Success">Success</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Warning">Warning</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Error">Error</BlazyBadge>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Sizes</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-wrap items-center gap-4">
            <BlazyBadge Size="BlazyBadgeSize.ExtraSmall">XS</BlazyBadge>
            <BlazyBadge Size="BlazyBadgeSize.Small">SM</BlazyBadge>
            <BlazyBadge>Default</BlazyBadge>
            <BlazyBadge Size="BlazyBadgeSize.Large">LG</BlazyBadge>
            <BlazyBadge Size="BlazyBadgeSize.ExtraLarge">XL</BlazyBadge>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Styles</h2>
    <CodeExample Code="@stylesCode">
        <div class="flex flex-wrap gap-4">
            <BlazyBadge Color="BlazyBadgeColor.Primary">Default</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Primary" Style="BlazyBadgeStyle.Outline">Outline</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Primary" Style="BlazyBadgeStyle.Dash">Dash</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Primary" Style="BlazyBadgeStyle.Soft">Soft</BlazyBadge>
            <BlazyBadge Color="BlazyBadgeColor.Primary" Style="BlazyBadgeStyle.Ghost">Ghost</BlazyBadge>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">In Text</h2>
    <CodeExample Code="@inTextCode">
        <div class="flex flex-wrap items-center gap-2">
            <h2 class="text-lg font-semibold">
                Inbox
                <BlazyBadge Color="BlazyBadgeColor.Secondary">99+</BlazyBadge>
            </h2>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Button</h2>
    <CodeExample Code="@withButtonCode">
        <div class="flex flex-wrap gap-4">
            <BlazyButton>
                Notifications
                <BlazyBadge Color="BlazyBadgeColor.Secondary">8</BlazyBadge>
            </BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Primary">
                Messages
                <BlazyBadge Style="BlazyBadgeStyle.Outline">New</BlazyBadge>
            </BlazyButton>
        </div>
    </CodeExample>
</section>

