@page "/fieldsets"

<PageTitle>Fieldset - BlazyUI</PageTitle>

<h1 class="text-3xl font-bold mb-8">Fieldset</h1>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Basic Fieldset</h2>
    <CodeExample Code="@basicCode">
        <BlazyFieldset Legend="User Information" Class="bg-base-200 border-base-300 rounded-box border p-4 max-w-md">
            <label class="label">Name</label>
            <input type="text" class="input w-full" placeholder="Enter your name" />
            <label class="label">Email</label>
            <input type="email" class="input w-full" placeholder="Enter your email" />
        </BlazyFieldset>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Without Legend</h2>
    <CodeExample Code="@noLegendCode">
        <BlazyFieldset Class="bg-base-200 border-base-300 rounded-box border p-4 max-w-md">
            <label class="label">Username</label>
            <input type="text" class="input w-full" placeholder="Choose a username" />
            <label class="label">Password</label>
            <input type="password" class="input w-full" placeholder="Create a password" />
        </BlazyFieldset>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Custom Legend Content</h2>
    <CodeExample Code="@customLegendCode">
        <BlazyFieldset Class="bg-base-200 border-base-300 rounded-box border p-4 max-w-md">
            <LegendContent>
                <span class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                    Security Settings
                </span>
            </LegendContent>
            <ChildContent>
                <label class="label">Current Password</label>
                <input type="password" class="input w-full" placeholder="Enter current password" />
                <label class="label">New Password</label>
                <input type="password" class="input w-full" placeholder="Enter new password" />
                <label class="label">Confirm Password</label>
                <input type="password" class="input w-full" placeholder="Confirm new password" />
            </ChildContent>
        </BlazyFieldset>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">With BlazyUI Components</h2>
    <CodeExample Code="@blazyuiCode">
        <BlazyFieldset Legend="Preferences" Class="bg-base-200 border-base-300 rounded-box border p-4 max-w-md">
            <BlazyLabel TValue="string" Variant="BlazyLabelVariant.Input" Text="Theme">
                <select class="grow" @bind="theme">
                    <option value="light">Light</option>
                    <option value="dark">Dark</option>
                    <option value="system">System</option>
                </select>
            </BlazyLabel>
            <div class="mt-4">
                <label class="label cursor-pointer justify-start gap-4">
                    <BlazyCheckbox @bind-Value="notifications" />
                    <span>Enable notifications</span>
                </label>
            </div>
            <div class="mt-2">
                <label class="label cursor-pointer justify-start gap-4">
                    <BlazyToggle @bind-Value="darkMode" Color="BlazyToggleColor.Primary" />
                    <span>Dark mode</span>
                </label>
            </div>
        </BlazyFieldset>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Multiple Fieldsets</h2>
    <CodeExample Code="@multipleCode">
        <div class="flex flex-col gap-6 max-w-md">
            <BlazyFieldset Legend="Personal Details" Class="bg-base-200 border-base-300 rounded-box border p-4">
                <label class="label">First Name</label>
                <input type="text" class="input w-full" placeholder="John" />
                <label class="label">Last Name</label>
                <input type="text" class="input w-full" placeholder="Doe" />
            </BlazyFieldset>

            <BlazyFieldset Legend="Contact Information" Class="bg-base-200 border-base-300 rounded-box border p-4">
                <label class="label">Phone</label>
                <input type="tel" class="input w-full" placeholder="+1 (555) 123-4567" />
                <label class="label">Address</label>
                <BlazyTextarea @bind-Value="address" placeholder="Enter your address..." Class="w-full" />
            </BlazyFieldset>

            <BlazyFieldset Legend="Account Settings" Class="bg-base-200 border-base-300 rounded-box border p-4">
                <label class="label">Language</label>
                <BlazySelect @bind-Value="language" Class="w-full">
                    <option value="en">English</option>
                    <option value="es">Spanish</option>
                    <option value="fr">French</option>
                </BlazySelect>
                <label class="label">Timezone</label>
                <BlazySelect @bind-Value="timezone" Class="w-full">
                    <option value="utc">UTC</option>
                    <option value="est">Eastern Time</option>
                    <option value="pst">Pacific Time</option>
                </BlazySelect>
            </BlazyFieldset>
        </div>
    </CodeExample>
</section>

