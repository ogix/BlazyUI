@page "/kbds"

<PageTitle>Keyboard</PageTitle>

<h1 class="text-3xl font-bold mb-6">Kbd Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <div class="flex flex-wrap gap-4">
            <Kbd>A</Kbd>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Sizes</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-wrap items-center gap-4">
            <Kbd Size="KbdSize.ExtraSmall">XS</Kbd>
            <Kbd Size="KbdSize.Small">SM</Kbd>
            <Kbd>Default</Kbd>
            <Kbd Size="KbdSize.Large">LG</Kbd>
            <Kbd Size="KbdSize.ExtraLarge">XL</Kbd>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Keyboard Shortcuts</h2>
    <CodeExample Code="@shortcutsCode">
        <div class="flex flex-wrap items-center gap-2">
            <Kbd>Ctrl</Kbd>
            <span>+</span>
            <Kbd>C</Kbd>
            <span class="mx-4">to copy</span>

            <Kbd>Ctrl</Kbd>
            <span>+</span>
            <Kbd>V</Kbd>
            <span class="mx-4">to paste</span>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Full Keyboard Row</h2>
    <CodeExample Code="@keyboardRowCode">
        <div class="flex flex-wrap justify-center gap-1">
            <Kbd>q</Kbd>
            <Kbd>w</Kbd>
            <Kbd>e</Kbd>
            <Kbd>r</Kbd>
            <Kbd>t</Kbd>
            <Kbd>y</Kbd>
            <Kbd>u</Kbd>
            <Kbd>i</Kbd>
            <Kbd>o</Kbd>
            <Kbd>p</Kbd>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Arrow Keys</h2>
    <CodeExample Code="@arrowKeysCode">
        <div class="flex flex-col items-center gap-1">
            <Kbd>▲</Kbd>
            <div class="flex gap-10">
                <Kbd>◀</Kbd>
                <Kbd>▼</Kbd>
                <Kbd>▶</Kbd>
            </div>
        </div>
    </CodeExample>
</section>

@code {
    private string basicCode = @"<Kbd>A</Kbd>";

    private string sizesCode = @"<Kbd Size=""KbdSize.ExtraSmall"">XS</Kbd>
<Kbd Size=""KbdSize.Small"">SM</Kbd>
<Kbd>Default</Kbd>
<Kbd Size=""KbdSize.Large"">LG</Kbd>
<Kbd Size=""KbdSize.ExtraLarge"">XL</Kbd>";

    private string shortcutsCode = @"<Kbd>Ctrl</Kbd> + <Kbd>C</Kbd> to copy
<Kbd>Ctrl</Kbd> + <Kbd>V</Kbd> to paste";

    private string keyboardRowCode = @"<Kbd>q</Kbd>
<Kbd>w</Kbd>
<Kbd>e</Kbd>
<!-- ... other keys ... -->";

    private string arrowKeysCode = @"<Kbd>▲</Kbd>
<Kbd>◀</Kbd>
<Kbd>▼</Kbd>
<Kbd>▶</Kbd>";
}
