@page "/kbds"

<PageTitle>Keyboard</PageTitle>

<h1 class="text-3xl font-bold mb-6">Kbd Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <div class="flex flex-wrap gap-4">
            <BlazyKbd>A</BlazyKbd>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Sizes</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-wrap items-center gap-4">
            <BlazyKbd Size="BlazyKbdSize.ExtraSmall">XS</BlazyKbd>
            <BlazyKbd Size="BlazyKbdSize.Small">SM</BlazyKbd>
            <BlazyKbd>Default</BlazyKbd>
            <BlazyKbd Size="BlazyKbdSize.Large">LG</BlazyKbd>
            <BlazyKbd Size="BlazyKbdSize.ExtraLarge">XL</BlazyKbd>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Keyboard Shortcuts</h2>
    <CodeExample Code="@shortcutsCode">
        <div class="flex flex-wrap items-center gap-2">
            <BlazyKbd>Ctrl</BlazyKbd>
            <span>+</span>
            <BlazyKbd>C</BlazyKbd>
            <span class="mx-4">to copy</span>

            <BlazyKbd>Ctrl</BlazyKbd>
            <span>+</span>
            <BlazyKbd>V</BlazyKbd>
            <span class="mx-4">to paste</span>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Full Keyboard Row</h2>
    <CodeExample Code="@keyboardRowCode">
        <div class="flex flex-wrap justify-center gap-1">
            <BlazyKbd>q</BlazyKbd>
            <BlazyKbd>w</BlazyKbd>
            <BlazyKbd>e</BlazyKbd>
            <BlazyKbd>r</BlazyKbd>
            <BlazyKbd>t</BlazyKbd>
            <BlazyKbd>y</BlazyKbd>
            <BlazyKbd>u</BlazyKbd>
            <BlazyKbd>i</BlazyKbd>
            <BlazyKbd>o</BlazyKbd>
            <BlazyKbd>p</BlazyKbd>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Arrow Keys</h2>
    <CodeExample Code="@arrowKeysCode">
        <div class="flex flex-col items-center gap-1">
            <BlazyKbd>▲</BlazyKbd>
            <div class="flex gap-10">
                <BlazyKbd>◀</BlazyKbd>
                <BlazyKbd>▼</BlazyKbd>
                <BlazyKbd>▶</BlazyKbd>
            </div>
        </div>
    </CodeExample>
</section>

@code {
    private string basicCode = @"<BlazyKbd>A</BlazyKbd>";

    private string sizesCode = @"<BlazyKbd Size=""BlazyKbdSize.ExtraSmall"">XS</BlazyKbd>
<BlazyKbd Size=""BlazyKbdSize.Small"">SM</BlazyKbd>
<BlazyKbd>Default</BlazyKbd>
<BlazyKbd Size=""BlazyKbdSize.Large"">LG</BlazyKbd>
<BlazyKbd Size=""BlazyKbdSize.ExtraLarge"">XL</BlazyKbd>";

    private string shortcutsCode = @"<BlazyKbd>Ctrl</BlazyKbd> + <BlazyKbd>C</BlazyKbd> to copy
<BlazyKbd>Ctrl</BlazyKbd> + <BlazyKbd>V</BlazyKbd> to paste";

    private string keyboardRowCode = @"<BlazyKbd>q</BlazyKbd>
<BlazyKbd>w</BlazyKbd>
<BlazyKbd>e</BlazyKbd>
<!-- ... other keys ... -->";

    private string arrowKeysCode = @"<BlazyKbd>▲</BlazyKbd>
<BlazyKbd>◀</BlazyKbd>
<BlazyKbd>▼</BlazyKbd>
<BlazyKbd>▶</BlazyKbd>";
}
