@page "/fileinputs"

<PageTitle>FileInput - BlazyUI</PageTitle>

<h1 class="text-3xl font-bold mb-8">FileInput</h1>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <div class="w-full max-w-xs">
            <BlazyFileInput OnChange="@OnBasicFileSelected" />
            @if (!string.IsNullOrEmpty(basicFileName))
            {
                <p class="mt-2 text-sm opacity-70">Selected: @basicFileName</p>
            }
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">With Border</h2>
    <CodeExample Code="@borderedCode">
        <div class="w-full max-w-xs">
            <BlazyFileInput Bordered OnChange="@OnBorderedFileSelected" />
            @if (!string.IsNullOrEmpty(borderedFileName))
            {
                <p class="mt-2 text-sm opacity-70">Selected: @borderedFileName</p>
            }
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Ghost Style</h2>
    <CodeExample Code="@ghostCode">
        <div class="w-full max-w-xs">
            <BlazyFileInput Ghost OnChange="@OnGhostFileSelected" />
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Multiple Files</h2>
    <CodeExample Code="@multipleCode">
        <div class="w-full max-w-xs">
            <BlazyFileInput Multiple Bordered OnChange="@OnMultipleFilesSelected" />
            @if (multipleFileNames.Any())
            {
                <p class="mt-2 text-sm opacity-70">Selected: @string.Join(", ", multipleFileNames)</p>
            }
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Accept Specific Types</h2>
    <CodeExample Code="@acceptCode">
        <div class="flex flex-col gap-4 max-w-xs">
            <div>
                <label class="label-text">Images only</label>
                <BlazyFileInput Bordered Accept="image/*" OnChange="@OnImageFileSelected" />
            </div>
            <div>
                <label class="label-text">PDF only</label>
                <BlazyFileInput Bordered Accept=".pdf" OnChange="@OnPdfFileSelected" />
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Sizes</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-col gap-4 max-w-xs">
            <div>
                <label class="label-text">Extra Small</label>
                <BlazyFileInput Size="BlazyFileInputSize.ExtraSmall" Bordered />
            </div>
            <div>
                <label class="label-text">Small</label>
                <BlazyFileInput Size="BlazyFileInputSize.Small" Bordered />
            </div>
            <div>
                <label class="label-text">Default (Medium)</label>
                <BlazyFileInput Size="BlazyFileInputSize.Medium" Bordered />
            </div>
            <div>
                <label class="label-text">Large</label>
                <BlazyFileInput Size="BlazyFileInputSize.Large" Bordered />
            </div>
            <div>
                <label class="label-text">Extra Large</label>
                <BlazyFileInput Size="BlazyFileInputSize.ExtraLarge" Bordered />
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <CodeExample Code="@colorsCode">
        <div class="flex flex-col gap-4 max-w-xs">
            <div>
                <label class="label-text">Default</label>
                <BlazyFileInput Color="BlazyFileInputColor.Default" Bordered />
            </div>
            <div>
                <label class="label-text">Primary</label>
                <BlazyFileInput Color="BlazyFileInputColor.Primary" Bordered />
            </div>
            <div>
                <label class="label-text">Secondary</label>
                <BlazyFileInput Color="BlazyFileInputColor.Secondary" Bordered />
            </div>
            <div>
                <label class="label-text">Accent</label>
                <BlazyFileInput Color="BlazyFileInputColor.Accent" Bordered />
            </div>
            <div>
                <label class="label-text">Info</label>
                <BlazyFileInput Color="BlazyFileInputColor.Info" Bordered />
            </div>
            <div>
                <label class="label-text">Success</label>
                <BlazyFileInput Color="BlazyFileInputColor.Success" Bordered />
            </div>
            <div>
                <label class="label-text">Warning</label>
                <BlazyFileInput Color="BlazyFileInputColor.Warning" Bordered />
            </div>
            <div>
                <label class="label-text">Error</label>
                <BlazyFileInput Color="BlazyFileInputColor.Error" Bordered />
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">With HTML Attributes</h2>
    <CodeExample Code="@attributesCode">
        <div class="w-full max-w-xs">
            <BlazyFileInput Bordered disabled class="opacity-50" />
            <p class="mt-2 text-sm opacity-50">Disabled</p>
        </div>
    </CodeExample>
</section>

@code {
    private string basicFileName = "";
    private string borderedFileName = "";
    private List<string> multipleFileNames = new();

    private void OnBasicFileSelected(InputFileChangeEventArgs e)
    {
        basicFileName = e.File.Name;
    }

    private void OnBorderedFileSelected(InputFileChangeEventArgs e)
    {
        borderedFileName = e.File.Name;
    }

    private void OnGhostFileSelected(InputFileChangeEventArgs e)
    {
        // Just for demo purposes
    }

    private void OnMultipleFilesSelected(InputFileChangeEventArgs e)
    {
        multipleFileNames = e.GetMultipleFiles().Select(f => f.Name).ToList();
    }

    private void OnImageFileSelected(InputFileChangeEventArgs e)
    {
        // Just for demo purposes
    }

    private void OnPdfFileSelected(InputFileChangeEventArgs e)
    {
        // Just for demo purposes
    }

    private string basicCode = @"<BlazyFileInput OnChange=""@OnFileSelected"" />";

    private string borderedCode = @"<BlazyFileInput Bordered OnChange=""@OnFileSelected"" />";

    private string ghostCode = @"<BlazyFileInput Ghost />";

    private string multipleCode = @"<BlazyFileInput Multiple Bordered OnChange=""@OnMultipleFilesSelected"" />";

    private string acceptCode = @"<BlazyFileInput Bordered Accept=""image/*"" />
<BlazyFileInput Bordered Accept="".pdf"" />";

    private string sizesCode = @"<BlazyFileInput Size=""BlazyFileInputSize.ExtraSmall"" Bordered />
<BlazyFileInput Size=""BlazyFileInputSize.Small"" Bordered />
<BlazyFileInput Size=""BlazyFileInputSize.Medium"" Bordered />
<BlazyFileInput Size=""BlazyFileInputSize.Large"" Bordered />
<BlazyFileInput Size=""BlazyFileInputSize.ExtraLarge"" Bordered />";

    private string colorsCode = @"<BlazyFileInput Color=""BlazyFileInputColor.Default"" Bordered />
<BlazyFileInput Color=""BlazyFileInputColor.Primary"" Bordered />
<BlazyFileInput Color=""BlazyFileInputColor.Secondary"" Bordered />
<BlazyFileInput Color=""BlazyFileInputColor.Accent"" Bordered />
<BlazyFileInput Color=""BlazyFileInputColor.Info"" Bordered />
<BlazyFileInput Color=""BlazyFileInputColor.Success"" Bordered />
<BlazyFileInput Color=""BlazyFileInputColor.Warning"" Bordered />
<BlazyFileInput Color=""BlazyFileInputColor.Error"" Bordered />";

    private string attributesCode = @"<BlazyFileInput Bordered disabled />";
}
