@page "/loadings"

<PageTitle>Loading</PageTitle>

<h1 class="text-3xl font-bold mb-6">Loading Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <BlazyLoading />
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Types</h2>
    <CodeExample Code="@typesCode">
        <div class="flex flex-wrap items-center gap-4">
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Type="BlazyLoadingType.Spinner" />
                <span class="text-sm">Spinner</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Type="BlazyLoadingType.Dots" />
                <span class="text-sm">Dots</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Type="BlazyLoadingType.Ring" />
                <span class="text-sm">Ring</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Type="BlazyLoadingType.Ball" />
                <span class="text-sm">Ball</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Type="BlazyLoadingType.Bars" />
                <span class="text-sm">Bars</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Type="BlazyLoadingType.Infinity" />
                <span class="text-sm">Infinity</span>
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Sizes</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-wrap items-center gap-4">
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Size="BlazyLoadingSize.ExtraSmall" />
                <span class="text-sm">XS</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Size="BlazyLoadingSize.Small" />
                <span class="text-sm">Small</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Size="BlazyLoadingSize.Medium" />
                <span class="text-sm">Medium</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Size="BlazyLoadingSize.Large" />
                <span class="text-sm">Large</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <BlazyLoading Size="BlazyLoadingSize.ExtraLarge" />
                <span class="text-sm">XL</span>
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <CodeExample Code="@colorsCode">
        <div class="flex flex-wrap items-center gap-4">
            <BlazyLoading Color="BlazyLoadingColor.Primary" />
            <BlazyLoading Color="BlazyLoadingColor.Secondary" />
            <BlazyLoading Color="BlazyLoadingColor.Accent" />
            <BlazyLoading Color="BlazyLoadingColor.Neutral" />
            <BlazyLoading Color="BlazyLoadingColor.Info" />
            <BlazyLoading Color="BlazyLoadingColor.Success" />
            <BlazyLoading Color="BlazyLoadingColor.Warning" />
            <BlazyLoading Color="BlazyLoadingColor.Error" />
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Colors with Different Types</h2>
    <CodeExample Code="@colorsTypesCode">
        <div class="flex flex-wrap items-center gap-4">
            <BlazyLoading Type="BlazyLoadingType.Spinner" Color="BlazyLoadingColor.Primary" />
            <BlazyLoading Type="BlazyLoadingType.Dots" Color="BlazyLoadingColor.Secondary" />
            <BlazyLoading Type="BlazyLoadingType.Ring" Color="BlazyLoadingColor.Accent" />
            <BlazyLoading Type="BlazyLoadingType.Ball" Color="BlazyLoadingColor.Success" />
            <BlazyLoading Type="BlazyLoadingType.Bars" Color="BlazyLoadingColor.Warning" />
            <BlazyLoading Type="BlazyLoadingType.Infinity" Color="BlazyLoadingColor.Error" />
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Inherited Color</h2>
    <CodeExample Code="@inheritedColorCode">
        <div class="flex flex-wrap items-center gap-4">
            <div class="text-primary">
                <BlazyLoading />
            </div>
            <div class="text-success">
                <BlazyLoading Type="BlazyLoadingType.Dots" />
            </div>
            <div class="text-error">
                <BlazyLoading Type="BlazyLoadingType.Ring" />
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Button</h2>
    <CodeExample Code="@buttonCode">
        <div class="flex flex-wrap items-center gap-4">
            <BlazyButton Loading>Loading...</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Primary" Loading>Processing</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Custom Aria Label</h2>
    <CodeExample Code="@ariaCode">
        <BlazyLoading aria-label="Saving your changes" />
    </CodeExample>
</section>

