@page "/toasts"
@inject IBlazyToastService ToastService

<PageTitle>Toasts</PageTitle>

<h1 class="text-3xl font-bold mb-6">Toast Component</h1>

<BlazyAlert Color="BlazyAlertColor.Info" Class="mb-6"><span><strong>Setup:</strong> Add <BlazyKbd>&lt;BlazyToastProvider /&gt;</BlazyKbd> to your MainLayout.razor or App.razor to enable toast notifications.</span></BlazyAlert>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Simple Toasts</h2>
    <CodeExample Code="@simpleToastsCode">
        <div class="flex flex-wrap gap-2">
            <BlazyButton Color="BlazyButtonColor.Info" OnClick="ShowInfo">Info</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Success" OnClick="ShowSuccess">Success</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Warning" OnClick="ShowWarning">Warning</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Error" OnClick="ShowError">Error</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Custom Duration</h2>
    <CodeExample Code="@customDurationCode">
        <div class="flex flex-wrap gap-2">
            <BlazyButton Color="BlazyButtonColor.Primary" OnClick="ShowShortDuration">Short (2s)</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Secondary" OnClick="ShowLongDuration">Long (10s)</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Custom Position</h2>
    <CodeExample Code="@customPositionCode">
        <div class="flex flex-wrap gap-2">
            <BlazyButton Color="BlazyButtonColor.Accent" OnClick="ShowTopStart">Top Start</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Accent" OnClick="ShowTopCenter">Top Center</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Accent" OnClick="ShowTopEnd">Top End</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Accent" OnClick="ShowMiddleCenter">Middle Center</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">No Auto-Dismiss</h2>
    <CodeExample Code="@noAutoDismissCode">
        <div class="flex flex-wrap gap-2">
            <BlazyButton Color="BlazyButtonColor.Neutral" OnClick="ShowPersistent">Persistent Toast</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Clear All</h2>
    <CodeExample Code="@clearAllCode">
        <div class="flex flex-wrap gap-2">
            <BlazyButton Color="BlazyButtonColor.Error" Variant="ButtonVariant.Outline" OnClick="ClearAll">Clear All Toasts</BlazyButton>
        </div>
    </CodeExample>
</section>

@code {
    private void ShowInfo()
    {
        ToastService.Info("This is an informational message.");
    }

    private void ShowSuccess()
    {
        ToastService.Success("Operation completed successfully!");
    }

    private void ShowWarning()
    {
        ToastService.Warning("Please review your input before continuing.");
    }

    private void ShowError()
    {
        ToastService.Error("An error occurred. Please try again.");
    }

    private void ShowShortDuration()
    {
        ToastService.Info("This toast disappears quickly!", options =>
        {
            options.Duration = 2000;
        });
    }

    private void ShowLongDuration()
    {
        ToastService.Info("This toast stays longer.", options =>
        {
            options.Duration = 10000;
        });
    }

    private void ShowTopStart()
    {
        ToastService.Success("Top Start position!", options =>
        {
            options.Position = BlazyToastPosition.TopStart;
        });
    }

    private void ShowTopCenter()
    {
        ToastService.Success("Top Center position!", options =>
        {
            options.Position = BlazyToastPosition.TopCenter;
        });
    }

    private void ShowTopEnd()
    {
        ToastService.Success("Top End position!", options =>
        {
            options.Position = BlazyToastPosition.TopEnd;
        });
    }

    private void ShowMiddleCenter()
    {
        ToastService.Success("Middle Center position!", options =>
        {
            options.Position = BlazyToastPosition.MiddleCenter;
        });
    }

    private void ShowPersistent()
    {
        ToastService.Warning("This toast won't auto-dismiss. Click X to close.", options =>
        {
            options.Duration = 0;
        });
    }

    private void ClearAll()
    {
        ToastService.Clear();
    }

