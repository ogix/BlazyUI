@page "/indicators"

<PageTitle>Indicators</PageTitle>

<h1 class="text-3xl font-bold mb-6">Indicator Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <BlazyIndicator>
            <BlazyIndicatorItem>
                <BlazyBadge Color="BlazyBadgeColor.Secondary">new</BlazyBadge>
            </BlazyIndicatorItem>
            <div class="grid w-32 h-32 bg-base-300 place-items-center rounded-lg">content</div>
        </BlazyIndicator>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Positions</h2>
    <CodeExample Code="@positionsCode">
        <div class="flex flex-wrap gap-8">
            @* Top Row *@
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.Start" Vertical="BlazyIndicatorVertical.Top">
                    <BlazyBadge Color="BlazyBadgeColor.Primary">TL</BlazyBadge>
                </BlazyIndicatorItem>
                <div class="grid w-20 h-20 bg-base-300 place-items-center rounded-lg"></div>
            </BlazyIndicator>
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.Center" Vertical="BlazyIndicatorVertical.Top">
                    <BlazyBadge Color="BlazyBadgeColor.Primary">T</BlazyBadge>
                </BlazyIndicatorItem>
                <div class="grid w-20 h-20 bg-base-300 place-items-center rounded-lg"></div>
            </BlazyIndicator>
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.End" Vertical="BlazyIndicatorVertical.Top">
                    <BlazyBadge Color="BlazyBadgeColor.Primary">TR</BlazyBadge>
                </BlazyIndicatorItem>
                <div class="grid w-20 h-20 bg-base-300 place-items-center rounded-lg"></div>
            </BlazyIndicator>
            @* Middle Row *@
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.Start" Vertical="BlazyIndicatorVertical.Middle">
                    <BlazyBadge Color="BlazyBadgeColor.Secondary">ML</BlazyBadge>
                </BlazyIndicatorItem>
                <div class="grid w-20 h-20 bg-base-300 place-items-center rounded-lg"></div>
            </BlazyIndicator>
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.Center" Vertical="BlazyIndicatorVertical.Middle">
                    <BlazyBadge Color="BlazyBadgeColor.Secondary">M</BlazyBadge>
                </BlazyIndicatorItem>
                <div class="grid w-20 h-20 bg-base-300 place-items-center rounded-lg"></div>
            </BlazyIndicator>
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.End" Vertical="BlazyIndicatorVertical.Middle">
                    <BlazyBadge Color="BlazyBadgeColor.Secondary">MR</BlazyBadge>
                </BlazyIndicatorItem>
                <div class="grid w-20 h-20 bg-base-300 place-items-center rounded-lg"></div>
            </BlazyIndicator>
            @* Bottom Row *@
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.Start" Vertical="BlazyIndicatorVertical.Bottom">
                    <BlazyBadge Color="BlazyBadgeColor.Accent">BL</BlazyBadge>
                </BlazyIndicatorItem>
                <div class="grid w-20 h-20 bg-base-300 place-items-center rounded-lg"></div>
            </BlazyIndicator>
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.Center" Vertical="BlazyIndicatorVertical.Bottom">
                    <BlazyBadge Color="BlazyBadgeColor.Accent">B</BlazyBadge>
                </BlazyIndicatorItem>
                <div class="grid w-20 h-20 bg-base-300 place-items-center rounded-lg"></div>
            </BlazyIndicator>
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.End" Vertical="BlazyIndicatorVertical.Bottom">
                    <BlazyBadge Color="BlazyBadgeColor.Accent">BR</BlazyBadge>
                </BlazyIndicatorItem>
                <div class="grid w-20 h-20 bg-base-300 place-items-center rounded-lg"></div>
            </BlazyIndicator>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Multiple Indicators</h2>
    <CodeExample Code="@multipleCode">
        <BlazyIndicator>
            <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.Start" Vertical="BlazyIndicatorVertical.Top">
                <BlazyBadge Color="BlazyBadgeColor.Info">1</BlazyBadge>
            </BlazyIndicatorItem>
            <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.End" Vertical="BlazyIndicatorVertical.Top">
                <BlazyBadge Color="BlazyBadgeColor.Success">2</BlazyBadge>
            </BlazyIndicatorItem>
            <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.Start" Vertical="BlazyIndicatorVertical.Bottom">
                <BlazyBadge Color="BlazyBadgeColor.Warning">3</BlazyBadge>
            </BlazyIndicatorItem>
            <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.End" Vertical="BlazyIndicatorVertical.Bottom">
                <BlazyBadge Color="BlazyBadgeColor.Error">4</BlazyBadge>
            </BlazyIndicatorItem>
            <div class="grid w-32 h-32 bg-base-300 place-items-center rounded-lg">content</div>
        </BlazyIndicator>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Button</h2>
    <CodeExample Code="@withButtonCode">
        <div class="flex flex-wrap gap-4">
            <BlazyIndicator>
                <BlazyIndicatorItem>
                    <BlazyBadge Color="BlazyBadgeColor.Secondary">99+</BlazyBadge>
                </BlazyIndicatorItem>
                <BlazyButton>Inbox</BlazyButton>
            </BlazyIndicator>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">For Input</h2>
    <CodeExample Code="@withInputCode">
        <BlazyIndicator>
            <BlazyIndicatorItem>
                <BlazyBadge Color="BlazyBadgeColor.Secondary">Required</BlazyBadge>
            </BlazyIndicatorItem>
            <input type="text" placeholder="Your email" class="input w-full" />
        </BlazyIndicator>
    </CodeExample>
</section>

