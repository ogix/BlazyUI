@page "/radios"

<PageTitle>Radio - BlazyUI</PageTitle>

<h1 class="text-3xl font-bold mb-8">Radio</h1>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <div class="flex flex-col gap-2">
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio @bind-Value="basicValue" Name="basic" OptionValue="option1" />
                <span>Option 1</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio @bind-Value="basicValue" Name="basic" OptionValue="option2" />
                <span>Option 2</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio @bind-Value="basicValue" Name="basic" OptionValue="option3" />
                <span>Option 3</span>
            </label>
        </div>
        <p class="mt-2 text-sm opacity-70">Selected: @basicValue</p>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Sizes</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-col gap-4">
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Size="BlazyRadioSize.ExtraSmall" @bind-Value="sizeValue" Name="sizes" OptionValue="xs" />
                <span>Extra Small</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Size="BlazyRadioSize.Small" @bind-Value="sizeValue" Name="sizes" OptionValue="sm" />
                <span>Small</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Size="BlazyRadioSize.Medium" @bind-Value="sizeValue" Name="sizes" OptionValue="default" />
                <span>Default (Medium)</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Size="BlazyRadioSize.Large" @bind-Value="sizeValue" Name="sizes" OptionValue="lg" />
                <span>Large</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Size="BlazyRadioSize.ExtraLarge" @bind-Value="sizeValue" Name="sizes" OptionValue="xl" />
                <span>Extra Large</span>
            </label>
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <CodeExample Code="@colorsCode">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Color="BlazyRadioColor.Default" @bind-Value="colorValue" Name="colors" OptionValue="default" />
                <span>Default</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Color="BlazyRadioColor.Neutral" @bind-Value="colorValue" Name="colors" OptionValue="neutral" />
                <span>Neutral</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Color="BlazyRadioColor.Primary" @bind-Value="colorValue" Name="colors" OptionValue="primary" />
                <span>Primary</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Color="BlazyRadioColor.Secondary" @bind-Value="colorValue" Name="colors" OptionValue="secondary" />
                <span>Secondary</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Color="BlazyRadioColor.Accent" @bind-Value="colorValue" Name="colors" OptionValue="accent" />
                <span>Accent</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Color="BlazyRadioColor.Info" @bind-Value="colorValue" Name="colors" OptionValue="info" />
                <span>Info</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Color="BlazyRadioColor.Success" @bind-Value="colorValue" Name="colors" OptionValue="success" />
                <span>Success</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Color="BlazyRadioColor.Warning" @bind-Value="colorValue" Name="colors" OptionValue="warning" />
                <span>Warning</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio Color="BlazyRadioColor.Error" @bind-Value="colorValue" Name="colors" OptionValue="error" />
                <span>Error</span>
            </label>
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">With Validation</h2>
    <CodeExample Code="@validationCode">
        <EditForm Model="@formModel" OnValidSubmit="@HandleValidSubmit" class="max-w-xs">
            <DataAnnotationsValidator />

            <div class="form-control mb-4">
                <span class="label-text mb-2">Select your plan:</span>
                <div class="flex flex-col gap-2">
                    <label class="flex items-center gap-2 cursor-pointer">
                        <BlazyRadio @bind-Value="formModel.SelectedPlan" Name="plan" OptionValue="free" Color="BlazyRadioColor.Primary" />
                        <span class="label-text">Free</span>
                    </label>
                    <label class="flex items-center gap-2 cursor-pointer">
                        <BlazyRadio @bind-Value="formModel.SelectedPlan" Name="plan" OptionValue="pro" Color="BlazyRadioColor.Primary" />
                        <span class="label-text">Pro ($9/mo)</span>
                    </label>
                    <label class="flex items-center gap-2 cursor-pointer">
                        <BlazyRadio @bind-Value="formModel.SelectedPlan" Name="plan" OptionValue="enterprise" Color="BlazyRadioColor.Primary" />
                        <span class="label-text">Enterprise ($99/mo)</span>
                    </label>
                </div>
                <ValidationMessage For="@(() => formModel.SelectedPlan)" class="text-error text-sm mt-1" />
            </div>

            <BlazyButton Type="submit" Color="BlazyButtonColor.Primary" Block>Subscribe</BlazyButton>
        </EditForm>
        @if (formSubmitted)
        {
            <BlazyAlert Color="BlazyAlertColor.Success" class="mt-4">Subscribed to @formModel.SelectedPlan plan!</BlazyAlert>
        }
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">With HTML Attributes</h2>
    <CodeExample Code="@attributesCode">
        <div class="flex flex-col gap-2">
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyRadio @bind-Value="disabledValue" Name="disabled" OptionValue="enabled" />
                <span>Enabled option</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer opacity-50">
                <BlazyRadio @bind-Value="disabledValue" Name="disabled" OptionValue="disabled" disabled />
                <span>Disabled option</span>
            </label>
        </div>
    </CodeExample>
</section>

@code {
    private string basicValue = "option1";
    private string sizeValue = "default";
    private string colorValue = "primary";
    private string disabledValue = "enabled";
    private bool formSubmitted = false;

    private FormModel formModel = new();

    private void HandleValidSubmit()
    {
        formSubmitted = true;
    }

    private class FormModel
    {
        public string SelectedPlan { get; set; } = "";
    }

    private string basicCode = @"<BlazyRadio @bind-Value=""selectedValue"" Name=""group"" OptionValue=""option1"" />
<BlazyRadio @bind-Value=""selectedValue"" Name=""group"" OptionValue=""option2"" />
<BlazyRadio @bind-Value=""selectedValue"" Name=""group"" OptionValue=""option3"" />";

    private string sizesCode = @"<BlazyRadio Size=""BlazyRadioSize.ExtraSmall"" />
<BlazyRadio Size=""BlazyRadioSize.Small"" />
<BlazyRadio Size=""BlazyRadioSize.Medium"" />
<BlazyRadio Size=""BlazyRadioSize.Large"" />
<BlazyRadio Size=""BlazyRadioSize.ExtraLarge"" />";

    private string colorsCode = @"<BlazyRadio Color=""BlazyRadioColor.Default"" />
<BlazyRadio Color=""BlazyRadioColor.Primary"" />
<BlazyRadio Color=""BlazyRadioColor.Secondary"" />
<BlazyRadio Color=""BlazyRadioColor.Accent"" />
<BlazyRadio Color=""BlazyRadioColor.Info"" />
<BlazyRadio Color=""BlazyRadioColor.Success"" />
<BlazyRadio Color=""BlazyRadioColor.Warning"" />
<BlazyRadio Color=""BlazyRadioColor.Error"" />";

    private string validationCode = @"<EditForm Model=""@formModel"" OnValidSubmit=""@HandleValidSubmit"">
    <DataAnnotationsValidator />
    <div class=""form-control mb-4"">
        <span class=""label-text mb-2"">Select your plan:</span>
        <BlazyRadio @bind-Value=""formModel.SelectedPlan"" Name=""plan"" OptionValue=""free"" />
        <BlazyRadio @bind-Value=""formModel.SelectedPlan"" Name=""plan"" OptionValue=""pro"" />
        <BlazyRadio @bind-Value=""formModel.SelectedPlan"" Name=""plan"" OptionValue=""enterprise"" />
        <ValidationMessage For=""@(() => formModel.SelectedPlan)"" />
    </div>
    <BlazyButton Type=""submit"" Color=""BlazyButtonColor.Primary"" Block>Subscribe</BlazyButton>
</EditForm>";

    private string attributesCode = @"<BlazyRadio @bind-Value=""value"" Name=""group"" OptionValue=""option"" disabled />";
}
