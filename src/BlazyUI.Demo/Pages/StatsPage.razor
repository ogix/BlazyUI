@page "/stats"

<PageTitle>Stats</PageTitle>

<h1 class="text-3xl font-bold mb-6">Stat Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <Stats Shadow>
            <Stat>
                <StatTitle>Total Page Views</StatTitle>
                <StatValue>89,400</StatValue>
                <StatDesc>21% more than last month</StatDesc>
            </Stat>
        </Stats>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Multiple Stats</h2>
    <CodeExample Code="@multipleCode">
        <Stats Shadow>
            <Stat>
                <StatTitle>Downloads</StatTitle>
                <StatValue>31K</StatValue>
                <StatDesc>Jan 1st - Feb 1st</StatDesc>
            </Stat>
            <Stat>
                <StatTitle>New Users</StatTitle>
                <StatValue>4,200</StatValue>
                <StatDesc>↗︎ 400 (22%)</StatDesc>
            </Stat>
            <Stat>
                <StatTitle>New Registers</StatTitle>
                <StatValue>1,200</StatValue>
                <StatDesc>↘︎ 90 (14%)</StatDesc>
            </Stat>
        </Stats>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Icons</h2>
    <CodeExample Code="@withIconsCode">
        <Stats Shadow>
            <Stat>
                <StatFigure Class="text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-8 w-8 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                </StatFigure>
                <StatTitle>Total Likes</StatTitle>
                <StatValue Class="text-primary">25.6K</StatValue>
                <StatDesc>21% more than last month</StatDesc>
            </Stat>
            <Stat>
                <StatFigure Class="text-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-8 w-8 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </StatFigure>
                <StatTitle>Page Views</StatTitle>
                <StatValue Class="text-secondary">2.6M</StatValue>
                <StatDesc>21% more than last month</StatDesc>
            </Stat>
        </Stats>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Vertical</h2>
    <CodeExample Code="@verticalCode">
        <Stats Direction="StatsDirection.Vertical" Shadow>
            <Stat>
                <StatTitle>Downloads</StatTitle>
                <StatValue>31K</StatValue>
            </Stat>
            <Stat>
                <StatTitle>New Users</StatTitle>
                <StatValue>4,200</StatValue>
            </Stat>
            <Stat>
                <StatTitle>New Registers</StatTitle>
                <StatValue>1,200</StatValue>
            </Stat>
        </Stats>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Actions</h2>
    <CodeExample Code="@withActionsCode">
        <Stats Shadow>
            <Stat>
                <StatTitle>Account balance</StatTitle>
                <StatValue>$89,400</StatValue>
                <StatActions>
                    <Button Size="ButtonSize.Small" Color="ButtonColor.Success">Add funds</Button>
                </StatActions>
            </Stat>
            <Stat>
                <StatTitle>Current balance</StatTitle>
                <StatValue>$89,400</StatValue>
                <StatActions>
                    <Button Size="ButtonSize.Small">Withdrawal</Button>
                    <Button Size="ButtonSize.Small">Deposit</Button>
                </StatActions>
            </Stat>
        </Stats>
    </CodeExample>
</section>

