@page "/stats"

<PageTitle>Stats</PageTitle>

<h1 class="text-3xl font-bold mb-6">Stat Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <BlazyStats Shadow>
            <BlazyStat>
                <BlazyStatTitle>Total Page Views</BlazyStatTitle>
                <BlazyStatValue>89,400</BlazyStatValue>
                <BlazyStatDesc>21% more than last month</BlazyStatDesc>
            </BlazyStat>
        </BlazyStats>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Multiple Stats</h2>
    <CodeExample Code="@multipleCode">
        <BlazyStats Shadow>
            <BlazyStat>
                <BlazyStatTitle>Downloads</BlazyStatTitle>
                <BlazyStatValue>31K</BlazyStatValue>
                <BlazyStatDesc>Jan 1st - Feb 1st</BlazyStatDesc>
            </BlazyStat>
            <BlazyStat>
                <BlazyStatTitle>New Users</BlazyStatTitle>
                <BlazyStatValue>4,200</BlazyStatValue>
                <BlazyStatDesc>↗︎ 400 (22%)</BlazyStatDesc>
            </BlazyStat>
            <BlazyStat>
                <BlazyStatTitle>New Registers</BlazyStatTitle>
                <BlazyStatValue>1,200</BlazyStatValue>
                <BlazyStatDesc>↘︎ 90 (14%)</BlazyStatDesc>
            </BlazyStat>
        </BlazyStats>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Icons</h2>
    <CodeExample Code="@withIconsCode">
        <BlazyStats Shadow>
            <BlazyStat>
                <BlazyStatFigure Class="text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-8 w-8 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                </BlazyStatFigure>
                <BlazyStatTitle>Total Likes</BlazyStatTitle>
                <BlazyStatValue Class="text-primary">25.6K</BlazyStatValue>
                <BlazyStatDesc>21% more than last month</BlazyStatDesc>
            </BlazyStat>
            <BlazyStat>
                <BlazyStatFigure Class="text-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-8 w-8 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </BlazyStatFigure>
                <BlazyStatTitle>Page Views</BlazyStatTitle>
                <BlazyStatValue Class="text-secondary">2.6M</BlazyStatValue>
                <BlazyStatDesc>21% more than last month</BlazyStatDesc>
            </BlazyStat>
        </BlazyStats>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Vertical</h2>
    <CodeExample Code="@verticalCode">
        <BlazyStats Direction="BlazyStatsDirection.Vertical" Shadow>
            <BlazyStat>
                <BlazyStatTitle>Downloads</BlazyStatTitle>
                <BlazyStatValue>31K</BlazyStatValue>
            </BlazyStat>
            <BlazyStat>
                <BlazyStatTitle>New Users</BlazyStatTitle>
                <BlazyStatValue>4,200</BlazyStatValue>
            </BlazyStat>
            <BlazyStat>
                <BlazyStatTitle>New Registers</BlazyStatTitle>
                <BlazyStatValue>1,200</BlazyStatValue>
            </BlazyStat>
        </BlazyStats>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Actions</h2>
    <CodeExample Code="@withActionsCode">
        <BlazyStats Shadow>
            <BlazyStat>
                <BlazyStatTitle>Account balance</BlazyStatTitle>
                <BlazyStatValue>$89,400</BlazyStatValue>
                <BlazyStatActions>
                    <BlazyButton Size="BlazyButtonSize.Small" Color="BlazyButtonColor.Success">Add funds</BlazyButton>
                </BlazyStatActions>
            </BlazyStat>
            <BlazyStat>
                <BlazyStatTitle>Current balance</BlazyStatTitle>
                <BlazyStatValue>$89,400</BlazyStatValue>
                <BlazyStatActions>
                    <BlazyButton Size="BlazyButtonSize.Small">Withdrawal</BlazyButton>
                    <BlazyButton Size="BlazyButtonSize.Small">Deposit</BlazyButton>
                </BlazyStatActions>
            </BlazyStat>
        </BlazyStats>
    </CodeExample>
</section>

