@page "/buttons"

<PageTitle>Buttons</PageTitle>

<h1 class="text-3xl font-bold mb-6">Button Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <div class="flex flex-wrap gap-2">
            <BlazyButton>Default</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Neutral">Neutral</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Primary">Primary</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Secondary">Secondary</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Accent">Accent</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Info">Info</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Success">Success</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Warning">Warning</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Error">Error</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Sizes</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-wrap items-center gap-2">
            <BlazyButton Size="BlazyButtonSize.ExtraSmall">Extra Small</BlazyButton>
            <BlazyButton Size="BlazyButtonSize.Small">Small</BlazyButton>
            <BlazyButton>Medium</BlazyButton>
            <BlazyButton Size="BlazyButtonSize.Large">Large</BlazyButton>
            <BlazyButton Size="BlazyButtonSize.ExtraLarge">Extra Large</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Styles</h2>
    <CodeExample Code="@stylesCode">
        <div class="flex flex-wrap gap-2">
            <BlazyButton Color="BlazyButtonColor.Primary">Solid</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Primary" Style="BlazyButtonStyle.Outline">Outline</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Primary" Style="BlazyButtonStyle.Dash">Dash</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Primary" Style="BlazyButtonStyle.Soft">Soft</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Primary" Style="BlazyButtonStyle.Ghost">Ghost</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Primary" Style="BlazyButtonStyle.Link">Link</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Modifiers</h2>
    <CodeExample Code="@modifiersCode">
        <div class="flex flex-wrap gap-4 items-start">
            <BlazyButton Color="BlazyButtonColor.Primary" Wide>Wide</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Secondary" Square>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Accent" Circle>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
            </BlazyButton>
        </div>
        <div class="mt-4">
            <BlazyButton Color="BlazyButtonColor.Info" Block>Block (Full Width)</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">States</h2>
    <CodeExample Code="@statesCode">
        <div class="flex flex-wrap gap-2">
            <BlazyButton Color="BlazyButtonColor.Primary" Active>Active</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Primary" Disabled>Disabled</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Primary" Loading>Loading</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Secondary" Style="BlazyButtonStyle.Outline" Loading>Loading Outline</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Link Buttons</h2>
    <CodeExample Code="@linkButtonsCode">
        <div class="flex flex-wrap gap-2">
            <BlazyButton Color="BlazyButtonColor.Primary" Href="https://github.com">GitHub</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Secondary" Href="https://github.com" Target="_blank">Open in New Tab</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Accent" Href="/">Home Page</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Info" Href="https://github.com" Disabled>Disabled Link</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Warning" Href="https://github.com" Loading>Loading Link</BlazyButton>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Interactive</h2>
    <CodeExample Code="@interactiveCode">
        <div class="flex flex-wrap items-center gap-4">
            <BlazyButton Color="BlazyButtonColor.Primary" OnClick="@HandleClick">Click me</BlazyButton>
            <span class="text-sm">Clicked: @clickCount times</span>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Custom Classes</h2>
    <CodeExample Code="@customClassesCode">
        <div class="flex flex-wrap gap-2">
            <BlazyButton Color="BlazyButtonColor.Primary" Class="rounded-full">Rounded Full</BlazyButton>
            <BlazyButton Color="BlazyButtonColor.Secondary" Class="shadow-lg">With Shadow</BlazyButton>
        </div>
    </CodeExample>
</section>

