    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Lazy Loading</h2>
    <p class="text-sm text-base-content/70 mb-4">
        With <code>LoadMode="BlazyTabLoadMode.Lazy"</code>, only the active tab's content is rendered.
        Switching away destroys the content. Try typing in an input, switch tabs, then come back — your text will be gone.
    </p>
    <CodeExample Code="@lazyCode">
        <div class="space-y-4">
            <BlazyTabs @bind-ActiveTab="lazyTab" LoadMode="BlazyTabLoadMode.Lazy" Variant="BlazyTabVariant.Box">
                <BlazyTabItem Id="lazy1" Label="Tab 1">
                    <div class="p-4">
                        <p class="mb-2">Type something, switch tabs, then come back:</p>
                        <input type="text" class="input input-bordered w-full max-w-xs" placeholder="Type here..." />
                    </div>
                </BlazyTabItem>
                <BlazyTabItem Id="lazy2" Label="Tab 2">
                    <div class="p-4">
                        <p class="mb-2">Type something, switch tabs, then come back:</p>
                        <input type="text" class="input input-bordered w-full max-w-xs" placeholder="Type here..." />
                    </div>
                </BlazyTabItem>
