@page "/progresses"

<PageTitle>Progress</PageTitle>

<h1 class="text-3xl font-bold mb-6">Progress Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <div class="w-full max-w-md">
            <BlazyProgress Value="50" />
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Different Values</h2>
    <CodeExample Code="@valuesCode">
        <div class="w-full max-w-md space-y-4">
            <div class="flex items-center gap-4">
                <span class="w-12 text-right">0%</span>
                <BlazyProgress Value="0" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-12 text-right">25%</span>
                <BlazyProgress Value="25" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-12 text-right">50%</span>
                <BlazyProgress Value="50" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-12 text-right">75%</span>
                <BlazyProgress Value="75" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-12 text-right">100%</span>
                <BlazyProgress Value="100" Class="flex-1" />
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Indeterminate</h2>
    <p class="text-sm text-base-content/70 mb-4">When no value is provided, the progress bar shows an animated indeterminate state.</p>
    <CodeExample Code="@indeterminateCode">
        <div class="w-full max-w-md">
            <BlazyProgress />
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <CodeExample Code="@colorsCode">
        <div class="w-full max-w-md space-y-4">
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">Default</span>
                <BlazyProgress Value="70" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">Neutral</span>
                <BlazyProgress Value="70" Color="BlazyProgressColor.Neutral" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">Primary</span>
                <BlazyProgress Value="70" Color="BlazyProgressColor.Primary" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">Secondary</span>
                <BlazyProgress Value="70" Color="BlazyProgressColor.Secondary" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">Accent</span>
                <BlazyProgress Value="70" Color="BlazyProgressColor.Accent" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">Info</span>
                <BlazyProgress Value="70" Color="BlazyProgressColor.Info" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">Success</span>
                <BlazyProgress Value="70" Color="BlazyProgressColor.Success" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">Warning</span>
                <BlazyProgress Value="70" Color="BlazyProgressColor.Warning" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">Error</span>
                <BlazyProgress Value="70" Color="BlazyProgressColor.Error" Class="flex-1" />
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Custom Max Value</h2>
    <CodeExample Code="@customMaxCode">
        <div class="w-full max-w-md space-y-4">
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">40/200</span>
                <BlazyProgress Value="40" Max="200" Class="flex-1" />
            </div>
            <div class="flex items-center gap-4">
                <span class="w-24 text-right">100/200</span>
                <BlazyProgress Value="100" Max="200" Class="flex-1" />
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Custom Width</h2>
    <CodeExample Code="@customWidthCode">
        <div class="space-y-4">
            <BlazyProgress Value="60" Color="BlazyProgressColor.Primary" Class="w-24" />
            <BlazyProgress Value="60" Color="BlazyProgressColor.Primary" Class="w-48" />
            <BlazyProgress Value="60" Color="BlazyProgressColor.Primary" Class="w-96" />
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Interactive Example</h2>
    <CodeExample Code="@interactiveCode">
        <div class="w-full max-w-md space-y-4">
            <BlazyProgress Value="@progressValue" Color="BlazyProgressColor.Primary" />
            <div class="flex items-center gap-4">
                <BlazyButton Color="BlazyButtonColor.Primary" Size="BlazyButtonSize.Small" OnClick="@(() => progressValue = Math.Max(0, progressValue - 10))">-10</BlazyButton>
                <span class="flex-1 text-center">@progressValue%</span>
                <BlazyButton Color="BlazyButtonColor.Primary" Size="BlazyButtonSize.Small" OnClick="@(() => progressValue = Math.Min(100, progressValue + 10))">+10</BlazyButton>
            </div>
        </div>
    </CodeExample>
</section>

@code {
    private int progressValue = 50;

    private string basicCode = @"<BlazyProgress Value=""50"" />";

    private string valuesCode = @"<BlazyProgress Value=""0"" />
<BlazyProgress Value=""25"" />
<BlazyProgress Value=""50"" />
<BlazyProgress Value=""75"" />
<BlazyProgress Value=""100"" />";

    private string indeterminateCode = @"<BlazyProgress />";

    private string colorsCode = @"<BlazyProgress Value=""70"" />
<BlazyProgress Value=""70"" Color=""BlazyProgressColor.Neutral"" />
<BlazyProgress Value=""70"" Color=""BlazyProgressColor.Primary"" />
<BlazyProgress Value=""70"" Color=""BlazyProgressColor.Secondary"" />
<BlazyProgress Value=""70"" Color=""BlazyProgressColor.Accent"" />
<BlazyProgress Value=""70"" Color=""BlazyProgressColor.Info"" />
<BlazyProgress Value=""70"" Color=""BlazyProgressColor.Success"" />
<BlazyProgress Value=""70"" Color=""BlazyProgressColor.Warning"" />
<BlazyProgress Value=""70"" Color=""BlazyProgressColor.Error"" />";

    private string customMaxCode = @"<BlazyProgress Value=""40"" Max=""200"" />
<BlazyProgress Value=""100"" Max=""200"" />";

    private string customWidthCode = @"<BlazyProgress Value=""60"" Color=""BlazyProgressColor.Primary"" Class=""w-24"" />
<BlazyProgress Value=""60"" Color=""BlazyProgressColor.Primary"" Class=""w-48"" />
<BlazyProgress Value=""60"" Color=""BlazyProgressColor.Primary"" Class=""w-96"" />";

    private string interactiveCode = @"<BlazyProgress Value=""@progressValue"" Color=""BlazyProgressColor.Primary"" />
<BlazyButton OnClick=""@(() => progressValue -= 10)"">-10</BlazyButton>
<span>@progressValue%</span>
<BlazyButton OnClick=""@(() => progressValue += 10)"">+10</BlazyButton>

@code {
    private int progressValue = 50;
}";
}
