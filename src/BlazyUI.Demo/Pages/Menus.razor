@page "/menus"

<PageTitle>Menu</PageTitle>

<h1 class="text-3xl font-bold mb-6">Menu Component</h1>

<p class="mb-6 opacity-70">Menu displays a list of links or actions organized vertically or horizontally.</p>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic Menu</h2>
    <CodeExample Code="@basicCode">
        <Menu Class="bg-base-200 rounded-box w-56">
            <MenuItem>
                <a>Item 1</a>
            </MenuItem>
            <MenuItem>
                <a>Item 2</a>
            </MenuItem>
            <MenuItem>
                <a>Item 3</a>
            </MenuItem>
        </Menu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Menu with Href</h2>
    <CodeExample Code="@hrefCode">
        <Menu Class="bg-base-200 rounded-box w-56">
            <MenuItem Href="#">Home</MenuItem>
            <MenuItem Href="#">About</MenuItem>
            <MenuItem Href="#">Contact</MenuItem>
        </Menu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Active and Disabled States</h2>
    <CodeExample Code="@statesCode">
        <Menu Class="bg-base-200 rounded-box w-56">
            <MenuItem Href="#">Normal Item</MenuItem>
            <MenuItem Href="#" Active="true">Active Item</MenuItem>
            <MenuItem Href="#" Disabled="true">Disabled Item</MenuItem>
        </Menu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Menu with Title</h2>
    <CodeExample Code="@titleCode">
        <Menu Class="bg-base-200 rounded-box w-56">
            <MenuTitle>Category</MenuTitle>
            <MenuItem Href="#">Item 1</MenuItem>
            <MenuItem Href="#">Item 2</MenuItem>
            <MenuItem Href="#">Item 3</MenuItem>
        </Menu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Multiple Sections</h2>
    <CodeExample Code="@sectionsCode">
        <Menu Class="bg-base-200 rounded-box w-56">
            <MenuTitle>General</MenuTitle>
            <MenuItem Href="#">Dashboard</MenuItem>
            <MenuItem Href="#">Analytics</MenuItem>
            <MenuTitle>Settings</MenuTitle>
            <MenuItem Href="#">Profile</MenuItem>
            <MenuItem Href="#">Preferences</MenuItem>
        </Menu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Collapsible Submenu</h2>
    <CodeExample Code="@dropdownCode">
        <Menu Class="bg-base-200 rounded-box w-56">
            <MenuItem Href="#">Item 1</MenuItem>
            <MenuDropdown Label="Parent">
                <MenuItem Href="#">Child 1</MenuItem>
                <MenuItem Href="#">Child 2</MenuItem>
                <MenuItem Href="#">Child 3</MenuItem>
            </MenuDropdown>
            <MenuItem Href="#">Item 3</MenuItem>
        </Menu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Open Submenu by Default</h2>
    <CodeExample Code="@openDropdownCode">
        <Menu Class="bg-base-200 rounded-box w-56">
            <MenuItem Href="#">Item 1</MenuItem>
            <MenuDropdown Label="Parent" Open="true">
                <MenuItem Href="#">Child 1</MenuItem>
                <MenuItem Href="#">Child 2</MenuItem>
            </MenuDropdown>
            <MenuItem Href="#">Item 3</MenuItem>
        </Menu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Nested Submenus</h2>
    <CodeExample Code="@nestedCode">
        <Menu Class="bg-base-200 rounded-box w-56">
            <MenuItem Href="#">Level 1</MenuItem>
            <MenuDropdown Label="Level 1 Parent" Open="true">
                <MenuItem Href="#">Level 2</MenuItem>
                <MenuDropdown Label="Level 2 Parent" Open="true">
                    <MenuItem Href="#">Level 3 Item 1</MenuItem>
                    <MenuItem Href="#">Level 3 Item 2</MenuItem>
                </MenuDropdown>
            </MenuDropdown>
        </Menu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Horizontal Menu</h2>
    <CodeExample Code="@horizontalCode">
        <Menu Direction="MenuDirection.Horizontal" Class="bg-base-200 rounded-box">
            <MenuItem Href="#">Item 1</MenuItem>
            <MenuItem Href="#">Item 2</MenuItem>
            <MenuItem Href="#">Item 3</MenuItem>
        </Menu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Size Variants</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-col gap-4">
            <div>
                <span class="text-sm opacity-70 mb-1 block">Extra Small (menu-xs)</span>
                <Menu Size="MenuSize.ExtraSmall" Class="bg-base-200 rounded-box w-56">
                    <MenuItem Href="#">Item 1</MenuItem>
                    <MenuItem Href="#">Item 2</MenuItem>
                </Menu>
            </div>
            <div>
                <span class="text-sm opacity-70 mb-1 block">Small (menu-sm)</span>
                <Menu Size="MenuSize.Small" Class="bg-base-200 rounded-box w-56">
                    <MenuItem Href="#">Item 1</MenuItem>
                    <MenuItem Href="#">Item 2</MenuItem>
                </Menu>
            </div>
            <div>
                <span class="text-sm opacity-70 mb-1 block">Medium (menu-md) - Default</span>
                <Menu Size="MenuSize.Medium" Class="bg-base-200 rounded-box w-56">
                    <MenuItem Href="#">Item 1</MenuItem>
                    <MenuItem Href="#">Item 2</MenuItem>
                </Menu>
            </div>
            <div>
                <span class="text-sm opacity-70 mb-1 block">Large (menu-lg)</span>
                <Menu Size="MenuSize.Large" Class="bg-base-200 rounded-box w-56">
                    <MenuItem Href="#">Item 1</MenuItem>
                    <MenuItem Href="#">Item 2</MenuItem>
                </Menu>
            </div>
            <div>
                <span class="text-sm opacity-70 mb-1 block">Extra Large (menu-xl)</span>
                <Menu Size="MenuSize.ExtraLarge" Class="bg-base-200 rounded-box w-56">
                    <MenuItem Href="#">Item 1</MenuItem>
                    <MenuItem Href="#">Item 2</MenuItem>
                </Menu>
            </div>
        </div>
    </CodeExample>
</section>

