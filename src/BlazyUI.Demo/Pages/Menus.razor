@page "/menus"

<PageTitle>Menu</PageTitle>

<h1 class="text-3xl font-bold mb-6">Menu Component</h1>

<p class="mb-6 opacity-70">Menu displays a list of links or actions organized vertically or horizontally.</p>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic Menu</h2>
    <CodeExample Code="@basicCode">
        <BlazyMenu Class="bg-base-200 rounded-box w-56">
            <BlazyMenuItem>
                <a>Item 1</a>
            </BlazyMenuItem>
            <BlazyMenuItem>
                <a>Item 2</a>
            </BlazyMenuItem>
            <BlazyMenuItem>
                <a>Item 3</a>
            </BlazyMenuItem>
        </BlazyMenu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Menu with Href</h2>
    <CodeExample Code="@hrefCode">
        <BlazyMenu Class="bg-base-200 rounded-box w-56">
            <BlazyMenuItem Href="#">Home</BlazyMenuItem>
            <BlazyMenuItem Href="#">About</BlazyMenuItem>
            <BlazyMenuItem Href="#">Contact</BlazyMenuItem>
        </BlazyMenu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Active and Disabled States</h2>
    <CodeExample Code="@statesCode">
        <BlazyMenu Class="bg-base-200 rounded-box w-56">
            <BlazyMenuItem Href="#">Normal Item</BlazyMenuItem>
            <BlazyMenuItem Href="#" Active="true">Active Item</BlazyMenuItem>
            <BlazyMenuItem Href="#" Disabled="true">Disabled Item</BlazyMenuItem>
        </BlazyMenu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Menu with Title</h2>
    <CodeExample Code="@titleCode">
        <BlazyMenu Class="bg-base-200 rounded-box w-56">
            <BlazyMenuTitle>Category</BlazyMenuTitle>
            <BlazyMenuItem Href="#">Item 1</BlazyMenuItem>
            <BlazyMenuItem Href="#">Item 2</BlazyMenuItem>
            <BlazyMenuItem Href="#">Item 3</BlazyMenuItem>
        </BlazyMenu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Multiple Sections</h2>
    <CodeExample Code="@sectionsCode">
        <BlazyMenu Class="bg-base-200 rounded-box w-56">
            <BlazyMenuTitle>General</BlazyMenuTitle>
            <BlazyMenuItem Href="#">Dashboard</BlazyMenuItem>
            <BlazyMenuItem Href="#">Analytics</BlazyMenuItem>
            <BlazyMenuTitle>Settings</BlazyMenuTitle>
            <BlazyMenuItem Href="#">Profile</BlazyMenuItem>
            <BlazyMenuItem Href="#">Preferences</BlazyMenuItem>
        </BlazyMenu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Collapsible Submenu</h2>
    <CodeExample Code="@dropdownCode">
        <BlazyMenu Class="bg-base-200 rounded-box w-56">
            <BlazyMenuItem Href="#">Item 1</BlazyMenuItem>
            <BlazyMenuDropdown Label="Parent">
                <BlazyMenuItem Href="#">Child 1</BlazyMenuItem>
                <BlazyMenuItem Href="#">Child 2</BlazyMenuItem>
                <BlazyMenuItem Href="#">Child 3</BlazyMenuItem>
            </BlazyMenuDropdown>
            <BlazyMenuItem Href="#">Item 3</BlazyMenuItem>
        </BlazyMenu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Open Submenu by Default</h2>
    <CodeExample Code="@openDropdownCode">
        <BlazyMenu Class="bg-base-200 rounded-box w-56">
            <BlazyMenuItem Href="#">Item 1</BlazyMenuItem>
            <BlazyMenuDropdown Label="Parent" Open="true">
                <BlazyMenuItem Href="#">Child 1</BlazyMenuItem>
                <BlazyMenuItem Href="#">Child 2</BlazyMenuItem>
            </BlazyMenuDropdown>
            <BlazyMenuItem Href="#">Item 3</BlazyMenuItem>
        </BlazyMenu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Nested Submenus</h2>
    <CodeExample Code="@nestedCode">
        <BlazyMenu Class="bg-base-200 rounded-box w-56">
            <BlazyMenuItem Href="#">Level 1</BlazyMenuItem>
            <BlazyMenuDropdown Label="Level 1 Parent" Open="true">
                <BlazyMenuItem Href="#">Level 2</BlazyMenuItem>
                <BlazyMenuDropdown Label="Level 2 Parent" Open="true">
                    <BlazyMenuItem Href="#">Level 3 Item 1</BlazyMenuItem>
                    <BlazyMenuItem Href="#">Level 3 Item 2</BlazyMenuItem>
                </BlazyMenuDropdown>
            </BlazyMenuDropdown>
        </BlazyMenu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Horizontal Menu</h2>
    <CodeExample Code="@horizontalCode">
        <BlazyMenu Direction="BlazyMenuDirection.Horizontal" Class="bg-base-200 rounded-box">
            <BlazyMenuItem Href="#">Item 1</BlazyMenuItem>
            <BlazyMenuItem Href="#">Item 2</BlazyMenuItem>
            <BlazyMenuItem Href="#">Item 3</BlazyMenuItem>
        </BlazyMenu>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Size Variants</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-col gap-4">
            <div>
                <span class="text-sm opacity-70 mb-1 block">Extra Small (menu-xs)</span>
                <BlazyMenu Size="BlazyMenuSize.ExtraSmall" Class="bg-base-200 rounded-box w-56">
