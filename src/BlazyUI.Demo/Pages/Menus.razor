                    <BlazyMenuItem Href="#">Item 1</BlazyMenuItem>
                    <BlazyMenuItem Href="#">Item 2</BlazyMenuItem>
                </BlazyMenu>
            </div>
            <div>
                <span class="text-sm opacity-70 mb-1 block">Medium (menu-md) - Default</span>
                <BlazyMenu Size="BlazyMenuSize.Medium" Class="bg-base-200 rounded-box w-56">
                    <BlazyMenuItem Href="#">Item 1</BlazyMenuItem>
                    <BlazyMenuItem Href="#">Item 2</BlazyMenuItem>
                </BlazyMenu>
            </div>
            <div>
                <span class="text-sm opacity-70 mb-1 block">Large (menu-lg)</span>
                <BlazyMenu Size="BlazyMenuSize.Large" Class="bg-base-200 rounded-box w-56">
                    <BlazyMenuItem Href="#">Item 1</BlazyMenuItem>
                    <BlazyMenuItem Href="#">Item 2</BlazyMenuItem>
