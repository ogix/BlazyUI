@page "/navbars"

<PageTitle>NavBars</PageTitle>

<h1 class="text-3xl font-bold mb-6">NavBar Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <BlazyNavBar Class="bg-base-200 rounded-box">
            <BlazyNavBarStart>
                <a class="btn btn-ghost text-xl">BlazyUI</a>
            </BlazyNavBarStart>
            <BlazyNavBarCenter>
                <a class="btn btn-ghost">Home</a>
                <a class="btn btn-ghost">About</a>
                <a class="btn btn-ghost">Contact</a>
            </BlazyNavBarCenter>
            <BlazyNavBarEnd>
                <BlazyButton>Login</BlazyButton>
            </BlazyNavBarEnd>
        </BlazyNavBar>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <CodeExample Code="@colorsCode">
        <div class="flex flex-col gap-4">
            <BlazyNavBar Class="rounded-box">
                <BlazyNavBarStart>
                    <span class="text-xl font-bold px-4">Default</span>
                </BlazyNavBarStart>
            </BlazyNavBar>
            <BlazyNavBar Color="BlazyNavBarColor.Neutral" Class="rounded-box">
                <BlazyNavBarStart>
                    <span class="text-xl font-bold px-4">Neutral</span>
                </BlazyNavBarStart>
            </BlazyNavBar>
            <BlazyNavBar Color="BlazyNavBarColor.Primary" Class="rounded-box">
                <BlazyNavBarStart>
                    <span class="text-xl font-bold px-4">Primary</span>
                </BlazyNavBarStart>
            </BlazyNavBar>
            <BlazyNavBar Color="BlazyNavBarColor.Secondary" Class="rounded-box">
                <BlazyNavBarStart>
                    <span class="text-xl font-bold px-4">Secondary</span>
                </BlazyNavBarStart>
            </BlazyNavBar>
            <BlazyNavBar Color="BlazyNavBarColor.Accent" Class="rounded-box">
                <BlazyNavBarStart>
                    <span class="text-xl font-bold px-4">Accent</span>
                </BlazyNavBarStart>
            </BlazyNavBar>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Shadow</h2>
    <CodeExample Code="@shadowCode">
        <div class="flex flex-col gap-4">
            <BlazyNavBar Class="bg-base-200 rounded-box">
                <BlazyNavBarStart>
                    <span class="px-4">Without shadow</span>
                </BlazyNavBarStart>
            </BlazyNavBar>
            <BlazyNavBar Shadow Class="bg-base-200 rounded-box">
                <BlazyNavBarStart>
                    <span class="px-4">With shadow</span>
                </BlazyNavBarStart>
            </BlazyNavBar>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Logo and Menu</h2>
    <CodeExample Code="@logoMenuCode">
        <BlazyNavBar Color="BlazyNavBarColor.Primary" Class="rounded-box">
            <BlazyNavBarStart>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                <span class="text-xl font-bold">Brand</span>
            </BlazyNavBarStart>
            <BlazyNavBarCenter class="hidden lg:flex">
                <ul class="menu menu-horizontal px-1">
                    <li><a>Features</a></li>
                    <li><a>Pricing</a></li>
                    <li><a>About</a></li>
                </ul>
            </BlazyNavBarCenter>
            <BlazyNavBarEnd>
                <BlazyButton Style="BlazyButtonStyle.Ghost">Sign In</BlazyButton>
                <BlazyButton>Get Started</BlazyButton>
            </BlazyNavBarEnd>
        </BlazyNavBar>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Search</h2>
    <CodeExample Code="@searchCode">
        <BlazyNavBar Class="bg-base-200 rounded-box">
            <BlazyNavBarStart>
                <a class="btn btn-ghost text-xl">App</a>
            </BlazyNavBarStart>
            <BlazyNavBarCenter>
                <input type="text" placeholder="Search..." class="input input-bordered w-full max-w-xs" />
            </BlazyNavBarCenter>
            <BlazyNavBarEnd>
                <button class="btn btn-ghost btn-circle">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </button>
                <button class="btn btn-ghost btn-circle">
                    <div class="indicator">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                        </svg>
                        <span class="badge badge-xs badge-primary indicator-item"></span>
                    </div>
                </button>
            </BlazyNavBarEnd>
        </BlazyNavBar>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Responsive with Dropdown</h2>
    <CodeExample Code="@responsiveCode">
        <BlazyNavBar Class="bg-base-200 rounded-box">
            <BlazyNavBarStart>
                <div class="dropdown">
                    <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
                        </svg>
                    </div>
                    <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
                        <li><a>Homepage</a></li>
                        <li><a>Portfolio</a></li>
                        <li><a>About</a></li>
                    </ul>
                </div>
                <a class="btn btn-ghost text-xl">daisyUI</a>
            </BlazyNavBarStart>
            <BlazyNavBarCenter class="hidden lg:flex">
                <ul class="menu menu-horizontal px-1">
                    <li><a>Homepage</a></li>
                    <li><a>Portfolio</a></li>
                    <li><a>About</a></li>
                </ul>
            </BlazyNavBarCenter>
            <BlazyNavBarEnd>
                <BlazyButton Color="BlazyButtonColor.Primary">Contact</BlazyButton>
            </BlazyNavBarEnd>
        </BlazyNavBar>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Sticky (scroll to see effect)</h2>
    <p class="mb-4 text-sm text-base-content/70">The sticky navbar below stays fixed at the top when you scroll within the container.</p>
    <CodeExample Code="@stickyCode">
        <div class="h-64 overflow-y-auto border border-base-300 rounded-box">
            <BlazyNavBar Sticky Shadow Color="BlazyNavBarColor.Primary">
                <BlazyNavBarStart>
                    <span class="text-xl font-bold px-4">Sticky NavBar</span>
                </BlazyNavBarStart>
                <BlazyNavBarEnd>
                    <BlazyButton Style="BlazyButtonStyle.Ghost">Action</BlazyButton>
                </BlazyNavBarEnd>
            </BlazyNavBar>
            <div class="p-4 space-y-4">
                <p>Scroll down to see the sticky navbar effect.</p>
