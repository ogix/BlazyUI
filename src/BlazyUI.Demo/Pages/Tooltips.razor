@page "/tooltips"

<PageTitle>Tooltips</PageTitle>

<h1 class="text-3xl font-bold mb-6">Tooltip Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <div class="flex flex-wrap gap-4 py-8">
            <BlazyTooltip Text="Hello, I'm a tooltip!">
                <BlazyButton>Hover me</BlazyButton>
            </BlazyTooltip>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Positions</h2>
    <CodeExample Code="@positionsCode">
        <div class="flex flex-wrap gap-4 py-8">
            <BlazyTooltip Text="Top tooltip" Position="BlazyTooltipPosition.Top">
                <BlazyButton>Top</BlazyButton>
            </BlazyTooltip>
            <BlazyTooltip Text="Bottom tooltip" Position="BlazyTooltipPosition.Bottom">
                <BlazyButton>Bottom</BlazyButton>
            </BlazyTooltip>
            <BlazyTooltip Text="Left tooltip" Position="BlazyTooltipPosition.Left">
                <BlazyButton>Left</BlazyButton>
            </BlazyTooltip>
            <BlazyTooltip Text="Right tooltip" Position="BlazyTooltipPosition.Right">
                <BlazyButton>Right</BlazyButton>
            </BlazyTooltip>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <CodeExample Code="@colorsCode">
        <div class="flex flex-wrap gap-16 py-8">
            <BlazyTooltip Text="Neutral tooltip" Color="BlazyTooltipColor.Neutral" Open>
                <BlazyButton Color="BlazyButtonColor.Neutral">Neutral</BlazyButton>
            </BlazyTooltip>
            <BlazyTooltip Text="Primary tooltip" Color="BlazyTooltipColor.Primary" Open>
                <BlazyButton Color="BlazyButtonColor.Primary">Primary</BlazyButton>
            </BlazyTooltip>
            <BlazyTooltip Text="Secondary tooltip" Color="BlazyTooltipColor.Secondary" Open>
                <BlazyButton Color="BlazyButtonColor.Secondary">Secondary</BlazyButton>
            </BlazyTooltip>
            <BlazyTooltip Text="Accent tooltip" Color="BlazyTooltipColor.Accent" Open>
                <BlazyButton Color="BlazyButtonColor.Accent">Accent</BlazyButton>
            </BlazyTooltip>
        </div>
        <div class="flex flex-wrap gap-16 py-8">
            <BlazyTooltip Text="Info tooltip" Color="BlazyTooltipColor.Info" Open>
                <BlazyButton Color="BlazyButtonColor.Info">Info</BlazyButton>
            </BlazyTooltip>
            <BlazyTooltip Text="Success tooltip" Color="BlazyTooltipColor.Success" Open>
                <BlazyButton Color="BlazyButtonColor.Success">Success</BlazyButton>
            </BlazyTooltip>
            <BlazyTooltip Text="Warning tooltip" Color="BlazyTooltipColor.Warning" Open>
                <BlazyButton Color="BlazyButtonColor.Warning">Warning</BlazyButton>
            </BlazyTooltip>
            <BlazyTooltip Text="Error tooltip" Color="BlazyTooltipColor.Error" Open>
                <BlazyButton Color="BlazyButtonColor.Error">Error</BlazyButton>
            </BlazyTooltip>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Force Open</h2>
    <CodeExample Code="@forceOpenCode">
        <div class="flex flex-wrap gap-4 py-4">
            <BlazyTooltip Text="I'm always visible!" Open>
                <BlazyButton Color="BlazyButtonColor.Primary">Always Open</BlazyButton>
            </BlazyTooltip>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Custom HTML Content</h2>
    <CodeExample Code="@customContentCode">
        <div class="flex flex-wrap gap-4 py-8">
            <BlazyTooltip>
                <TooltipContent>
                    <div class="p-2">
                        <strong>Rich Content</strong>
                        <p class="text-sm">With <em>HTML</em> formatting!</p>
                    </div>
                </TooltipContent>
                <ChildContent>
                    <BlazyButton Color="BlazyButtonColor.Secondary">Custom Content</BlazyButton>
                </ChildContent>
            </BlazyTooltip>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Different Elements</h2>
    <CodeExample Code="@withElementsCode">
        <div class="flex flex-wrap items-center gap-4 py-8">
            <BlazyTooltip Text="This is a text tooltip">
                <span class="underline decoration-dotted cursor-help">Hover over this text</span>
            </BlazyTooltip>
            <BlazyTooltip Text="Badge information" Color="BlazyTooltipColor.Info">
                <span class="badge badge-info">Info Badge</span>
            </BlazyTooltip>
            <BlazyTooltip Text="Click to see more" Position="BlazyTooltipPosition.Bottom">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 cursor-pointer" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </BlazyTooltip>
        </div>
    </CodeExample>
</section>

