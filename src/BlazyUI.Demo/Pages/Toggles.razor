@page "/toggles"

<PageTitle>Toggle - BlazyUI</PageTitle>

<h1 class="text-3xl font-bold mb-8">Toggle</h1>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <label class="flex items-center gap-2 cursor-pointer">
            <BlazyToggle @bind-Value="basicValue" />
            <span>Enable notifications</span>
        </label>
        <p class="mt-2 text-sm opacity-70">Enabled: @basicValue</p>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Sizes</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-col gap-4">
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Size="BlazyToggleSize.ExtraSmall" @bind-Value="sizeXs" />
                <span>Extra Small</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Size="BlazyToggleSize.Small" @bind-Value="sizeSm" />
                <span>Small</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Size="BlazyToggleSize.Medium" @bind-Value="sizeMd" />
                <span>Default (Medium)</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Size="BlazyToggleSize.Large" @bind-Value="sizeLg" />
                <span>Large</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Size="BlazyToggleSize.ExtraLarge" @bind-Value="sizeXl" />
                <span>Extra Large</span>
            </label>
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <CodeExample Code="@colorsCode">
        <div class="flex flex-col gap-4">
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Color="BlazyToggleColor.Default" @bind-Value="colorDefault" />
                <span>Default</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Color="BlazyToggleColor.Neutral" @bind-Value="colorNeutral" />
                <span>Neutral</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Color="BlazyToggleColor.Primary" @bind-Value="colorPrimary" />
                <span>Primary</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Color="BlazyToggleColor.Secondary" @bind-Value="colorSecondary" />
                <span>Secondary</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Color="BlazyToggleColor.Accent" @bind-Value="colorAccent" />
                <span>Accent</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Color="BlazyToggleColor.Info" @bind-Value="colorInfo" />
                <span>Info</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Color="BlazyToggleColor.Success" @bind-Value="colorSuccess" />
                <span>Success</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Color="BlazyToggleColor.Warning" @bind-Value="colorWarning" />
                <span>Warning</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle Color="BlazyToggleColor.Error" @bind-Value="colorError" />
                <span>Error</span>
            </label>
        </div>
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">With Validation</h2>
    <CodeExample Code="@validationCode">
        <EditForm Model="@formModel" OnValidSubmit="@HandleValidSubmit" class="max-w-xs">
            <DataAnnotationsValidator />

            <div class="form-control mb-4">
                <label class="flex items-center gap-2 cursor-pointer">
                    <BlazyToggle @bind-Value="formModel.AcceptMarketing" Color="BlazyToggleColor.Primary" />
                    <span class="label-text">Receive marketing emails</span>
                </label>
                <ValidationMessage For="@(() => formModel.AcceptMarketing)" class="text-error text-sm mt-1" />
            </div>

            <BlazyButton Type="submit" Color="BlazyButtonColor.Primary" Block>Save Preferences</BlazyButton>
        </EditForm>
        @if (formSubmitted)
        {
            <BlazyAlert Color="BlazyAlertColor.Success" class="mt-4">Preferences saved!</BlazyAlert>
        }
    </CodeExample>
</section>

<section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">With HTML Attributes</h2>
    <CodeExample Code="@attributesCode">
        <div class="flex flex-col gap-4">
            <label class="flex items-center gap-2 cursor-pointer">
                <BlazyToggle @bind-Value="disabledValue" disabled />
                <span class="opacity-50">Disabled</span>
            </label>
        </div>
    </CodeExample>
</section>

@code {
    private bool basicValue = false;
    private bool sizeXs = true;
    private bool sizeSm = true;
    private bool sizeMd = true;
    private bool sizeLg = true;
    private bool sizeXl = true;
    private bool colorDefault = true;
    private bool colorNeutral = true;
    private bool colorPrimary = true;
    private bool colorSecondary = true;
    private bool colorAccent = true;
    private bool colorInfo = true;
    private bool colorSuccess = true;
    private bool colorWarning = true;
    private bool colorError = true;
    private bool disabledValue = true;
    private bool formSubmitted = false;

    private FormModel formModel = new();

    private void HandleValidSubmit()
    {
        formSubmitted = true;
    }

    private class FormModel
    {
        public bool AcceptMarketing { get; set; } = false;
    }

    private string basicCode = @"<label class=""flex items-center gap-2 cursor-pointer"">
    <BlazyToggle @bind-Value=""value"" />
    <span>Enable notifications</span>
</label>";

    private string sizesCode = @"<BlazyToggle Size=""BlazyToggleSize.ExtraSmall"" />
<BlazyToggle Size=""BlazyToggleSize.Small"" />
<BlazyToggle Size=""BlazyToggleSize.Medium"" />
<BlazyToggle Size=""BlazyToggleSize.Large"" />
<BlazyToggle Size=""BlazyToggleSize.ExtraLarge"" />";

    private string colorsCode = @"<BlazyToggle Color=""BlazyToggleColor.Default"" />
<BlazyToggle Color=""BlazyToggleColor.Primary"" />
<BlazyToggle Color=""BlazyToggleColor.Secondary"" />
<BlazyToggle Color=""BlazyToggleColor.Accent"" />
<BlazyToggle Color=""BlazyToggleColor.Info"" />
<BlazyToggle Color=""BlazyToggleColor.Success"" />
<BlazyToggle Color=""BlazyToggleColor.Warning"" />
<BlazyToggle Color=""BlazyToggleColor.Error"" />";

    private string validationCode = @"<EditForm Model=""@formModel"" OnValidSubmit=""@HandleValidSubmit"">
    <DataAnnotationsValidator />
    <div class=""form-control mb-4"">
        <label class=""flex items-center gap-2 cursor-pointer"">
            <BlazyToggle @bind-Value=""formModel.AcceptMarketing"" Color=""BlazyToggleColor.Primary"" />
            <span class=""label-text"">Receive marketing emails</span>
        </label>
    </div>
    <BlazyButton Type=""submit"" Color=""BlazyButtonColor.Primary"" Block>Save Preferences</BlazyButton>
</EditForm>";

    private string attributesCode = @"<BlazyToggle @bind-Value=""value"" disabled />";
}
