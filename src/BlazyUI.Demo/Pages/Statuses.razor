@page "/statuses"

<PageTitle>Status</PageTitle>

<h1 class="text-3xl font-bold mb-6">Status Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <div class="flex flex-wrap gap-4">
            <BlazyStatus />
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <CodeExample Code="@colorsCode">
        <div class="flex flex-wrap items-center gap-4">
            <BlazyStatus />
            <BlazyStatus Color="BlazyStatusColor.Neutral" />
            <BlazyStatus Color="BlazyStatusColor.Primary" />
            <BlazyStatus Color="BlazyStatusColor.Secondary" />
            <BlazyStatus Color="BlazyStatusColor.Accent" />
            <BlazyStatus Color="BlazyStatusColor.Info" />
            <BlazyStatus Color="BlazyStatusColor.Success" />
            <BlazyStatus Color="BlazyStatusColor.Warning" />
            <BlazyStatus Color="BlazyStatusColor.Error" />
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Sizes</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-wrap items-center gap-4">
            <BlazyStatus Size="BlazyStatusSize.ExtraSmall" Color="BlazyStatusColor.Primary" />
            <BlazyStatus Size="BlazyStatusSize.Small" Color="BlazyStatusColor.Primary" />
            <BlazyStatus Size="BlazyStatusSize.Medium" Color="BlazyStatusColor.Primary" />
            <BlazyStatus Size="BlazyStatusSize.Large" Color="BlazyStatusColor.Primary" />
            <BlazyStatus Size="BlazyStatusSize.ExtraLarge" Color="BlazyStatusColor.Primary" />
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">With Text</h2>
    <CodeExample Code="@withTextCode">
        <div class="flex flex-col gap-3">
            <div class="flex items-center gap-2">
                <BlazyStatus Color="BlazyStatusColor.Success" Size="BlazyStatusSize.Small" />
                <span>Online</span>
            </div>
            <div class="flex items-center gap-2">
                <BlazyStatus Color="BlazyStatusColor.Error" Size="BlazyStatusSize.Small" />
                <span>Offline</span>
            </div>
            <div class="flex items-center gap-2">
                <BlazyStatus Color="BlazyStatusColor.Warning" Size="BlazyStatusSize.Small" />
                <span>Away</span>
            </div>
            <div class="flex items-center gap-2">
                <BlazyStatus Color="BlazyStatusColor.Neutral" Size="BlazyStatusSize.Small" />
                <span>Busy</span>
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Animation</h2>
    <CodeExample Code="@animationCode">
        <div class="flex flex-wrap items-center gap-6">
            <div class="flex items-center gap-2">
                <BlazyStatus Color="BlazyStatusColor.Primary" />
                <span>None</span>
            </div>
            <div class="flex items-center gap-2">
                <BlazyStatus Color="BlazyStatusColor.Info" Animation="BlazyStatusAnimation.Ping" />
                <span>Ping</span>
            </div>
            <div class="flex items-center gap-2">
                <BlazyStatus Color="BlazyStatusColor.Success" Animation="BlazyStatusAnimation.Bounce" />
                <span>Bounce</span>
            </div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">In Avatar</h2>
    <CodeExample Code="@inAvatarCode">
        <div class="flex flex-wrap items-center gap-6">
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.End" Vertical="BlazyIndicatorVertical.Bottom">
                    <BlazyStatus Color="BlazyStatusColor.Success" Size="BlazyStatusSize.Small" />
                </BlazyIndicatorItem>
                <div class="avatar">
                    <div class="w-12 rounded-full bg-base-300 flex items-center justify-center">
                        <span class="text-lg">JD</span>
                    </div>
                </div>
            </BlazyIndicator>
            <BlazyIndicator>
                <BlazyIndicatorItem Horizontal="BlazyIndicatorHorizontal.End" Vertical="BlazyIndicatorVertical.Bottom">
                    <BlazyStatus Color="BlazyStatusColor.Error" Size="BlazyStatusSize.Small" />
                </BlazyIndicatorItem>
                <div class="avatar">
                    <div class="w-12 rounded-full bg-base-300 flex items-center justify-center">
                        <span class="text-lg">AB</span>
                    </div>
                </div>
            </BlazyIndicator>
        </div>
    </CodeExample>
</section>

