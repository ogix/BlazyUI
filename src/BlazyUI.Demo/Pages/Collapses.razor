@page "/collapses"

<PageTitle>Collapses</PageTitle>

<h1 class="text-3xl font-bold mb-6">Collapse Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic Collapse with Arrow</h2>
    <CodeExample Code="@basicCode">
        <div class="space-y-2">
            <Collapse Indicator="CollapseIndicator.Arrow" Class="bg-base-200">
                <CollapseTitle Class="font-medium">
                    Click to expand/collapse
                </CollapseTitle>
                <CollapseContent>
                    <p>This is the collapsible content. Click the title to toggle visibility.</p>
                </CollapseContent>
            </Collapse>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Plus/Minus Indicator</h2>
    <CodeExample Code="@plusCode">
        <div class="space-y-2">
            <Collapse Indicator="CollapseIndicator.Plus" Class="bg-base-200">
                <CollapseTitle Class="font-medium">
                    Plus/Minus Toggle
                </CollapseTitle>
                <CollapseContent>
                    <p>This collapse uses a plus/minus indicator instead of an arrow.</p>
                </CollapseContent>
            </Collapse>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Controlled State (Two-Way Binding)</h2>
    <CodeExample Code="@bindingCode">
        <div class="space-y-4">
            <div class="flex gap-2">
                <Button Color="ButtonColor.Primary" Size="ButtonSize.Small" @onclick="() => isOpen = !isOpen">
                    Toggle Collapse
                </Button>
                <span class="text-sm self-center">State: @(isOpen ? "Open" : "Closed")</span>
            </div>
            <Collapse @bind-Open="isOpen" Indicator="CollapseIndicator.Arrow" Class="bg-base-200">
                <CollapseTitle Class="font-medium">
                    Controlled Collapse
                </CollapseTitle>
                <CollapseContent>
                    <p>This collapse is controlled via two-way binding. Use the button above to toggle it programmatically.</p>
                </CollapseContent>
            </Collapse>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Force Open / Force Closed</h2>
    <CodeExample Code="@forceCode">
        <div class="space-y-2">
            <Collapse Indicator="CollapseIndicator.Arrow" ForceOpen Class="bg-base-200">
                <CollapseTitle Class="font-medium">
                    Always Open (ForceOpen)
                </CollapseTitle>
                <CollapseContent>
                    <p>This collapse is forced to stay open using the ForceOpen parameter.</p>
                </CollapseContent>
            </Collapse>
            <Collapse Indicator="CollapseIndicator.Arrow" ForceClosed Class="bg-base-200">
                <CollapseTitle Class="font-medium">
                    Always Closed (ForceClosed)
                </CollapseTitle>
                <CollapseContent>
                    <p>This content is hidden because the collapse is forced closed.</p>
                </CollapseContent>
            </Collapse>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">No Indicator</h2>
    <CodeExample Code="@noIndicatorCode">
        <div class="space-y-2">
            <Collapse Class="bg-base-200">
                <CollapseTitle Class="font-medium">
                    No Visual Indicator
                </CollapseTitle>
                <CollapseContent>
                    <p>This collapse has no arrow or plus indicator. Click the title area to toggle.</p>
                </CollapseContent>
            </Collapse>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Styled Collapses</h2>
    <CodeExample Code="@styledCode">
        <div class="space-y-2">
            <Collapse Indicator="CollapseIndicator.Arrow" Class="border border-base-300 bg-base-100 rounded-box">
                <CollapseTitle Class="font-medium">
                    Bordered Collapse
                </CollapseTitle>
                <CollapseContent>
                    <p>This collapse has a border and rounded corners.</p>
                </CollapseContent>
            </Collapse>
            <Collapse Indicator="CollapseIndicator.Plus" Class="bg-primary text-primary-content rounded-box">
                <CollapseTitle Class="font-medium">
                    Primary Color
                </CollapseTitle>
                <CollapseContent>
                    <p>This collapse uses the primary color scheme.</p>
                </CollapseContent>
            </Collapse>
            <Collapse Indicator="CollapseIndicator.Arrow" Class="bg-secondary text-secondary-content rounded-box">
                <CollapseTitle Class="font-medium">
                    Secondary Color
                </CollapseTitle>
                <CollapseContent>
                    <p>This collapse uses the secondary color scheme.</p>
                </CollapseContent>
            </Collapse>
        </div>
    </CodeExample>
</section>

