@page "/collapses"

<PageTitle>Collapses</PageTitle>

<h1 class="text-3xl font-bold mb-6">Collapse Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic Collapse with Arrow</h2>
    <CodeExample Code="@basicCode">
        <div class="space-y-2">
            <BlazyCollapse Indicator="BlazyCollapseIndicator.Arrow" Class="bg-base-200">
                <BlazyCollapseTitle Class="font-medium">
                    Click to expand/collapse
                </BlazyCollapseTitle>
                <BlazyCollapseContent>
                    <p>This is the collapsible content. Click the title to toggle visibility.</p>
                </BlazyCollapseContent>
            </BlazyCollapse>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Plus/Minus Indicator</h2>
    <CodeExample Code="@plusCode">
        <div class="space-y-2">
            <BlazyCollapse Indicator="BlazyCollapseIndicator.Plus" Class="bg-base-200">
                <BlazyCollapseTitle Class="font-medium">
                    Plus/Minus Toggle
                </BlazyCollapseTitle>
                <BlazyCollapseContent>
                    <p>This collapse uses a plus/minus indicator instead of an arrow.</p>
                </BlazyCollapseContent>
            </BlazyCollapse>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Controlled State (Two-Way Binding)</h2>
    <CodeExample Code="@bindingCode">
        <div class="space-y-4">
            <div class="flex gap-2">
                <BlazyButton Color="BlazyButtonColor.Primary" Size="BlazyButtonSize.Small" @onclick="() => isOpen = !isOpen">
                    Toggle Collapse
                </BlazyButton>
                <span class="text-sm self-center">State: @(isOpen ? "Open" : "Closed")</span>
            </div>
            <BlazyCollapse @bind-Open="isOpen" Indicator="BlazyCollapseIndicator.Arrow" Class="bg-base-200">
                <BlazyCollapseTitle Class="font-medium">
                    Controlled Collapse
                </BlazyCollapseTitle>
                <BlazyCollapseContent>
                    <p>This collapse is controlled via two-way binding. Use the button above to toggle it programmatically.</p>
                </BlazyCollapseContent>
            </BlazyCollapse>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Force Open / Force Closed</h2>
    <CodeExample Code="@forceCode">
        <div class="space-y-2">
            <BlazyCollapse Indicator="BlazyCollapseIndicator.Arrow" ForceOpen Class="bg-base-200">
                <BlazyCollapseTitle Class="font-medium">
                    Always Open (ForceOpen)
                </BlazyCollapseTitle>
                <BlazyCollapseContent>
                    <p>This collapse is forced to stay open using the ForceOpen parameter.</p>
                </BlazyCollapseContent>
            </BlazyCollapse>
            <BlazyCollapse Indicator="BlazyCollapseIndicator.Arrow" ForceClosed Class="bg-base-200">
                <BlazyCollapseTitle Class="font-medium">
                    Always Closed (ForceClosed)
                </BlazyCollapseTitle>
                <BlazyCollapseContent>
                    <p>This content is hidden because the collapse is forced closed.</p>
                </BlazyCollapseContent>
            </BlazyCollapse>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">No Indicator</h2>
    <CodeExample Code="@noIndicatorCode">
        <div class="space-y-2">
            <BlazyCollapse Class="bg-base-200">
                <BlazyCollapseTitle Class="font-medium">
                    No Visual Indicator
                </BlazyCollapseTitle>
                <BlazyCollapseContent>
                    <p>This collapse has no arrow or plus indicator. Click the title area to toggle.</p>
                </BlazyCollapseContent>
            </BlazyCollapse>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Styled Collapses</h2>
    <CodeExample Code="@styledCode">
        <div class="space-y-2">
            <BlazyCollapse Indicator="BlazyCollapseIndicator.Arrow" Class="border border-base-300 bg-base-100 rounded-box">
                <BlazyCollapseTitle Class="font-medium">
                    Bordered Collapse
                </BlazyCollapseTitle>
                <BlazyCollapseContent>
                    <p>This collapse has a border and rounded corners.</p>
                </BlazyCollapseContent>
            </BlazyCollapse>
            <BlazyCollapse Indicator="BlazyCollapseIndicator.Plus" Class="bg-primary text-primary-content rounded-box">
                <BlazyCollapseTitle Class="font-medium">
                    Primary Color
                </BlazyCollapseTitle>
                <BlazyCollapseContent>
                    <p>This collapse uses the primary color scheme.</p>
                </BlazyCollapseContent>
            </BlazyCollapse>
            <BlazyCollapse Indicator="BlazyCollapseIndicator.Arrow" Class="bg-secondary text-secondary-content rounded-box">
                <BlazyCollapseTitle Class="font-medium">
                    Secondary Color
                </BlazyCollapseTitle>
                <BlazyCollapseContent>
                    <p>This collapse uses the secondary color scheme.</p>
                </BlazyCollapseContent>
            </BlazyCollapse>
        </div>
    </CodeExample>
</section>

