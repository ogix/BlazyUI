@page "/divider"

<PageTitle>Divider</PageTitle>

<h1 class="text-3xl font-bold mb-6">Divider Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic Divider</h2>
    <CodeExample Code="@basicCode">
        <div class="flex flex-col w-full">
            <div>Content above</div>
            <BlazyDivider />
            <div>Content below</div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Divider with Text</h2>
    <CodeExample Code="@withTextCode">
        <div class="flex flex-col w-full">
            <div>Content above</div>
            <BlazyDivider>OR</BlazyDivider>
            <div>Content below</div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <CodeExample Code="@colorsCode">
        <div class="flex flex-col w-full gap-2">
            <BlazyDivider>Default</BlazyDivider>
            <BlazyDivider Color="BlazyDividerColor.Neutral">Neutral</BlazyDivider>
            <BlazyDivider Color="BlazyDividerColor.Primary">Primary</BlazyDivider>
            <BlazyDivider Color="BlazyDividerColor.Secondary">Secondary</BlazyDivider>
            <BlazyDivider Color="BlazyDividerColor.Accent">Accent</BlazyDivider>
            <BlazyDivider Color="BlazyDividerColor.Info">Info</BlazyDivider>
            <BlazyDivider Color="BlazyDividerColor.Success">Success</BlazyDivider>
            <BlazyDivider Color="BlazyDividerColor.Warning">Warning</BlazyDivider>
            <BlazyDivider Color="BlazyDividerColor.Error">Error</BlazyDivider>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Text Position</h2>
    <CodeExample Code="@positionCode">
        <div class="flex flex-col w-full gap-2">
            <BlazyDivider Position="BlazyDividerPosition.Start">Start</BlazyDivider>
            <BlazyDivider>Center (Default)</BlazyDivider>
            <BlazyDivider Position="BlazyDividerPosition.End">End</BlazyDivider>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Horizontal Divider</h2>
    <p class="mb-4 text-sm opacity-70">For use in flex-row containers</p>
    <CodeExample Code="@horizontalCode">
        <div class="flex w-full">
            <div class="card bg-base-300 rounded-box grid h-20 grow place-items-center">Left</div>
            <BlazyDivider Horizontal />
            <div class="card bg-base-300 rounded-box grid h-20 grow place-items-center">Right</div>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Horizontal with Text</h2>
    <CodeExample Code="@horizontalTextCode">
        <div class="flex w-full">
            <div class="card bg-base-300 rounded-box grid h-20 grow place-items-center">Left</div>
            <BlazyDivider Horizontal>OR</BlazyDivider>
            <div class="card bg-base-300 rounded-box grid h-20 grow place-items-center">Right</div>
        </div>
    </CodeExample>
</section>

