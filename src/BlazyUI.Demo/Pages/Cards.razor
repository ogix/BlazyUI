@page "/cards"

<PageTitle>Cards</PageTitle>

<h1 class="text-3xl font-bold mb-6">Card Component</h1>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Basic</h2>
    <CodeExample Code="@basicCode">
        <div class="flex flex-wrap gap-4">
            <BlazyCard Class="w-96 shadow-xl">
                <BlazyCardFigure>
                    <img src="https://picsum.photos/seed/card1/400/200" alt="Card image" />
                </BlazyCardFigure>
                <BlazyCardBody>
                    <BlazyCardTitle>Card Title</BlazyCardTitle>
                    <p>If a dog chews shoes whose shoes does he choose?</p>
                    <BlazyCardActions>
                        <BlazyButton Color="BlazyButtonColor.Primary">Buy Now</BlazyButton>
                    </BlazyCardActions>
                </BlazyCardBody>
            </BlazyCard>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Styles</h2>
    <CodeExample Code="@stylesCode">
        <div class="flex flex-wrap gap-4">
            <BlazyCard Class="w-64 shadow-xl">
                <BlazyCardBody>
                    <BlazyCardTitle>Default</BlazyCardTitle>
                    <p>Default card style</p>
                </BlazyCardBody>
            </BlazyCard>
            <BlazyCard Style="BlazyCardStyle.Border" Class="w-64">
                <BlazyCardBody>
                    <BlazyCardTitle>Border</BlazyCardTitle>
                    <p>Card with border style</p>
                </BlazyCardBody>
            </BlazyCard>
            <BlazyCard Style="BlazyCardStyle.Dash" Class="w-64">
                <BlazyCardBody>
                    <BlazyCardTitle>Dash</BlazyCardTitle>
                    <p>Card with dashed border</p>
                </BlazyCardBody>
            </BlazyCard>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Side Image</h2>
    <CodeExample Code="@sideCode">
        <BlazyCard Side Class="shadow-xl">
            <BlazyCardFigure>
                <img src="https://picsum.photos/seed/card2/200/280" alt="Card image" />
            </BlazyCardFigure>
            <BlazyCardBody>
                <BlazyCardTitle>New movie is released!</BlazyCardTitle>
                <p>Click the button to watch on Jetflix app.</p>
                <BlazyCardActions>
                    <BlazyButton Color="BlazyButtonColor.Primary">Watch</BlazyButton>
                </BlazyCardActions>
            </BlazyCardBody>
        </BlazyCard>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Image Full</h2>
    <CodeExample Code="@imageFullCode">
        <BlazyCard ImageFull Class="w-96 shadow-xl">
            <BlazyCardFigure>
                <img src="https://picsum.photos/seed/card3/400/200" alt="Card image" />
            </BlazyCardFigure>
            <BlazyCardBody>
                <BlazyCardTitle>Overlay Title</BlazyCardTitle>
                <p>Text overlaid on the image</p>
                <BlazyCardActions>
                    <BlazyButton Color="BlazyButtonColor.Primary">Get Started</BlazyButton>
                </BlazyCardActions>
            </BlazyCardBody>
        </BlazyCard>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Card Sizes</h2>
    <CodeExample Code="@sizesCode">
        <div class="flex flex-wrap gap-4">
            <BlazyCard Size="BlazyCardSize.ExtraSmall" Style="BlazyCardStyle.Border">
                <BlazyCardBody>
                    <BlazyCardTitle>XS Card</BlazyCardTitle>
                    <p>Extra small card</p>
                </BlazyCardBody>
            </BlazyCard>
            <BlazyCard Size="BlazyCardSize.Small" Style="BlazyCardStyle.Border">
                <BlazyCardBody>
                    <BlazyCardTitle>Small Card</BlazyCardTitle>
                    <p>Small card size</p>
                </BlazyCardBody>
            </BlazyCard>
            <BlazyCard Style="BlazyCardStyle.Border">
                <BlazyCardBody>
                    <BlazyCardTitle>Default Card</BlazyCardTitle>
                    <p>Default card size</p>
                </BlazyCardBody>
            </BlazyCard>
        </div>
    </CodeExample>
</section>

<section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Card Actions Alignment</h2>
    <CodeExample Code="@actionsAlignCode">
        <div class="flex flex-wrap gap-4">
            <BlazyCard Style="BlazyCardStyle.Border" Class="w-64">
                <BlazyCardBody>
                    <BlazyCardTitle>Start</BlazyCardTitle>
                    <BlazyCardActions Justify="BlazyCardActionsJustify.Start">
                        <BlazyButton Size="BlazyButtonSize.Small">Action</BlazyButton>
                    </BlazyCardActions>
                </BlazyCardBody>
            </BlazyCard>
            <BlazyCard Style="BlazyCardStyle.Border" Class="w-64">
                <BlazyCardBody>
                    <BlazyCardTitle>Center</BlazyCardTitle>
                    <BlazyCardActions Justify="BlazyCardActionsJustify.Center">
                        <BlazyButton Size="BlazyButtonSize.Small">Action</BlazyButton>
                    </BlazyCardActions>
                </BlazyCardBody>
            </BlazyCard>
            <BlazyCard Style="BlazyCardStyle.Border" Class="w-64">
                <BlazyCardBody>
                    <BlazyCardTitle>End (Default)</BlazyCardTitle>
                    <BlazyCardActions Justify="BlazyCardActionsJustify.End">
                        <BlazyButton Size="BlazyButtonSize.Small">Action</BlazyButton>
                    </BlazyCardActions>
                </BlazyCardBody>
            </BlazyCard>
        </div>
    </CodeExample>
</section>

